<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="pole_emplois">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">

                <t t-call="web.basic_layout">
                    <style>
                        .page {
                        line-height:1.75;
                        font-size:15px ;
                        margin-left:20px;
                        margin-right:20px;
                        margin-top:20px;
                        }

                    </style>
                    <div class="page">
                        <div class="oe_structure"/>


                        <div class="row">
                            <div class="col-12">
                                <div class="col-6">
                                    Nom Prénom:
                                    <span t-esc="o.name"/>
                                </div>
                                <div class="col-6">
                                    Référence:
                                    <span t-esc="o.numero_pole_emploi"/>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <h3 align="center">------------------ Formulaire à compléter et à retourner à
                                votre pôle emploi -------------------
                            </h3>


                            <div class="row">
                                <div class="col-12">
                                    <div class="col-6" style="position:fixed">
                                        Nom Prénom:
                                        <span t-esc="o.name"/>
                                    </div>
                                    <div class="col-6" style="position:absolute;right: 10px;">
                                        Référence:
                                        <span t-esc="o.numero_pole_emploi"/>
                                    </div>
                                </div>
                                <br/>
                                <br/>
                                <p>
                                    <h4>Date de début de stage :
                                        <span t-esc="o.date_creation"/>
                                    </h4>

                                    <h4>Date de fin de stage :
                                        <span t-esc="o.date_creation"/>
                                    </h4>
                                    <h4>Nombre d'heures :
                                        <span t-esc="o.total_time_hours"/>
                                    </h4>

                                    <h4>Type de rémunération :</h4>

                                    <h4>Organisme payeur:</h4>


                                    <h4>Ce stage a t-il débuté alors que vous étiez en contrat de sécurisation
                                        professionnelle ?
                                        <ul>
                                            <li>OUI</li>
                                            <li>Non</li>
                                        </ul>
                                    </h4>


                                    <h4>S'agit-il de cours du soir ?
                                        <ul>
                                            <li>OUI</li>
                                            <li>Non</li>
                                        </ul>
                                    </h4>
                                </p>

                            </div>


                        </div>

                    </div>
                    <div  style="position:fixed">
                        Le
                        <!-- date système-->
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/>
                    </div>
                    <br/>
                     <div  style="position:fixed">
                        Signature
                        <!-- date système-->
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/>
                    </div>

                    <div style="position:absolute;right: 10px;">
                        <th style="max-height:190px;float:right;padding-right:30px;">Cachet de l'organisme de formation
                            <br/>

                            <img src='/partner_exam/static/src/img/signature.png'
                                 style="height:100px; width:200px;"/>
                        </th>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>