<odoo>
    <!--    This is used to reformat paper format of report PDF Convocation-->
    <record id="paperformat_pole_emploi" model="report.paperformat">
        <field name="name">Convocation</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">10</field>
        <field name="dpi">90</field>
    </record>

    <!-- Connection statement in partner (Générer pole emploi)-->
    <report id="rapport_pole_emplois"
            model="res.partner"
            string="Pole emploi"
            report_type="qweb-pdf"
            name="plateforme_pedagogique.pole_emplois"
            file="plateforme_pedagogique.plapole_emplois"
            print_report_name="'pole emploi - %s' % (object.name)"
            paperformat="plateforme_pedagogique.paperformat_pole_emploi"
    />


</odoo>