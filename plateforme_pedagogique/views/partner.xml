<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- filter par apprenant -->
    <record id="partner_search_view" model="ir.ui.view">
        <field name="name">partner.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"></field>
                <filter name="apprenants" string="les apprenants"
                        domain="[('apprenant','=','True')]"/>
                <filter name="etat_financement_cpf_cb" string="Financement non payés"
                        domain="[('etat_financement_cpf_cb', '!=', 'not_paid')]"/>

            </search>
        </field>
    </record>


    <!-- Vue Apprenants sous forme de graph-->
    <record model="ir.ui.view" id="session_graph">
        <field name="name">partnergraph</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <graph string="Temps Passé sur 360 par apprenant">
                <field name="email"></field>
                <field name="averageScore"></field>
            </graph>
        </field>
    </record>

    <!-- Vue Apprenants sous forme d'une liste -->
    <record model="ir.ui.view" id="partner_tree_view">
        <field name="name">Partners</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"></field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='email']" position="after">
                <field name="lastName" string="Nom" optional="show"/>
                <field name="firstName" string="Prénom" optional="show"/>
                <field name="last_login"/>
                <field name="temps_minute" string="Temps passé plateforme(min)" optional="hide"/>
                <field name="is_not_paid" invisible="0" optional="hide"/>
                <field name="etat_financement_cpf_cb" options='{"bg_color": "#FEE7F0:is_not_paid==True;"}'
                       optional="show" string="Financement"/>
                <field name="totalTimeSpentInMinutes" string="Temps passé plateforme(Heure)" optional="hide"/>
                <field name="total_time_visio_hour" string="Temps passé Visio" optional="hide"/>
                <field name="total_time_appels_hour" string="Temps passé appels" optional="hide"/>
                <field name="total_time_hours" string="Durée effective formation" optional="hide"/>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="partner_form_view">
        <field name="name">Apprenants</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//form//sheet" position="before">
                <header>
                    <button name="send_email_manuel" string="Envoyer invitation 360"
                            type="object" attrs="{'invisible': [('company_id', '=', 1)]}"></button>
                    <button name="supprimer_ione_manuelle" string="Supprimer de 360"
                            attrs="{'invisible': [('company_id', '=', 1)]}"
                            type="object" confirm="Êtes-vous sûr de vouloir supprimer cet apprenant de la plateforme?"
                            groups="crm_marketing_automation.group_user"/>
                     <button name="send_email_manuel" string="Ajouter sur 360"
                            type="object" groups="crm_marketing_automation.group_user"
                            attrs="{'invisible': [('company_id', '=', 1)]}"></button>
                </header>
            </xpath>
            <xpath expr="//group//div[@class='row form-panel']//div[1]//div[3]//div[5]" position="after">
                <div class="col-sm-12">

                    <div>
                        <label for="second_email" string="Email secondaire:" class="oe_edit_only">Email secondaire
                        </label>
                        <field name="second_email" class="oe_edit_only"/>
                    </div>
                    <field name="is_not_paid" invisible="1"/>

                </div>
            </xpath>
            <xpath expr="//page/group[@name='session']/group" position="inside">
                <field name="renounce_request"/>
                <field name="etat_financement_cpf_cb"/>
            </xpath>
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page string="Statistiques sur 360 Learning" name="pedagogique"
                      attrs="{'invisible': [('company_id', '=', 1)]}">
                    <group>
                        <group col="12">
                        </group>
                        <group col="8" colspan="4" string="Géneral">
                            <div>
                                <span class="o_stat_text">
                                    <field name="averageScore" widget="percentpie"/>
                                </span>
                            </div>
                            <div>
                                <span class="o_stat_text">
                                    <i class="fa fa-check"/>
                                    Dernière Connexion
                                </span>
                                <br/>
                                <span>
                                    <field name="last_login"/>
                                </span>
                            </div>
                            <div>
                                <span>
                                    <i class="fa fa-sign-in" style="align:center"/>
                                </span>
                                <span class="o_stat_text">
                                    Date d'inscription
                                </span>
                                <br/>
                                <span>
                                    <field name="date_creation"></field>
                                </span>
                            </div>
                        </group>
                        <group col="8" colspan="4" string="Statistiques">
                            <div>
                                <span>
                                    <i class="fa fa-clock-o"/>
                                </span>
                                <span class="o_stat_text">
                                     Temps passé plateforme
                                </span>
                                <br/>
                                <span class="o_stat_text">
                                    <field name="temps_minute"/>
                                </span>
                                <br/>
                                <span class="o_stat_text">
                                    <field name="temps_update_minute"/>
                                </span>
                                <br/>
                                <span class="o_stat_text">
                                    <field name="totalTimeSpentInMinutes"/>
                                </span>
                            </div>
                            <div>
                                <span class="o_stat_text">
                                    <i class="fa fa-comments"/>
                                    Temps passé Visio
                                </span>
                                <br/>
                                <span class="o_stat_value">
                                    <field name="total_time_visio_min"/>
                                </span>
                                <br/>
                                <span class="o_stat_text">
                                    <field name="total_time_visio_hour"/>
                                </span>
                            </div>
                            <div>
                                <span class="o_stat_text">
                                    <i class="fa fa-thumbs-up"/>
                                    Temps passé appels
                                </span>
                                <br/>
                                <span class="o_stat_value">
                                    <field name="total_time_appels_min"/>
                                </span>
                                <br/>
                                <span class="o_stat_value">
                                    <field name="total_time_appels_hour"/>
                                </span>
                            </div>
                            <div>
                                <span class="o_stat_text">
                                    <i class="fa fa-tasks"/>
                                    Durée effective formation
                                </span>
                                <br/>
                                <span class="o_stat_value">
                                    <field name="total_time_min"/>
                                </span>
                                <br/>
                                <span class="o_stat_value">
                                    <field name="total_time_hours"/>
                                </span>
                            </div>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="mcmacademy_cpf_view_res_partner_form_pole" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="mcm_cpf_partner.mcmacademy_cpf_view_res_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='mode_de_financement']" position="after">
                <field name="is_pole_emploi" string="Pole Emploi"
                       attrs="{'invisible': ['|',('mode_de_financement', '!=', 'cpf'),('is_pole_emploi','=',False)]}"/>
            </xpath>
            <xpath expr="//group/field[@name='mode_de_financement']" position="before">
                <field name="acompte_date"
                       attrs="{'invisible': ['|',('mode_de_financement', '!=', 'cpf'),('acompte_date','=',False)]}"></field>

            </xpath>
        </field>
    </record>

    <menuitem id="statistique_menu" name="Statistique"
              parent="main_learning_plateform_menu"/>


    <record model="ir.actions.act_window" id="contact_list_action">
        <field name="name">Les Apprenants</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>

    </record>

    <menuitem id="contact_menu" name="Apprenants"
              parent="statistique_menu"
              action="contact_list_action">
    </menuitem>



</odoo>