<odoo>
     <!-- automated action to add client to 360 learning -->
    <record id="rule_on_write_add_ione" model="base.automation">
        <field name="name">Base Automation: Ajouter Client à la plateforme 360</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="trigger">on_write</field>
        <field name="trigger_field_ids" eval="[(4,ref('mcm_session.field_res_partner__statut'))]"/>
        <field name="active" eval="True"/>
        <field name="state">code</field>

        <field name="code">
            if(record['statut']=='won'):
                model.ajouter_iOne_manuelle(record)

        </field>
    </record>
    <record id="rule_on_write_sale_add_ione" model="base.automation">
        <field name="name">Base Automation: Ajouter Client à la plateforme 360</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="trigger">on_write</field>
        <field name="trigger_field_ids" eval="[(4,ref('sale.field_sale_order__state'))]"/>
        <field name="active" eval="True"/>
        <field name="state">code</field>

        <field name="code">
            if(record['state']=='sale'):
                record.partner_id.ajouter_iOne_manuelle(record.partner_id)

        </field>
    </record>
     <record id="rule_on_write_renounce_add_ione" model="base.automation">
        <field name="name">Base Automation: Ajouter Client à la plateforme 360</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="trigger">on_write</field>
        <field name="trigger_field_ids" eval="[(4,ref('plateforme_pedagogique.field_res_partner__renounce_request'))]"/>
        <field name="active" eval="True"/>
        <field name="state">code</field>

        <field name="code">
            if(record['renounce_request']==True):
                record.partner_id.ajouter_iOne_manuelle(record.partner_id)

        </field>
    </record>
</odoo>