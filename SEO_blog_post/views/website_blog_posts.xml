<?xml version="1.0" encoding="UTF-8"?>
<!-- Add button near create button in tree view crm -->
<odoo>
    <template id="SEO_blog_post.custom_post_heading" inherit_id="website_blog.post_heading">
        <xpath expr="//a" position="replace">
            <a t-attf-href="#{blog_post.blog_post_website_url}" t-field="blog_post.name"
               t-attf-class="d-block text-reset text-decoration-none o_blog_post_title my-0 #{'h3' if opt_blog_list_view else ('h5' if opt_blog_readable else 'h6')}">
                Untitled Post
            </a>
        </xpath>
    </template>
    <template id="SEO_blog_post.custom_post_info" inherit_id="website_blog.post_info">
        <xpath expr="//a" position="replace">
            <a t-attf-href="#{blog_post.blog_post_website_url}" t-field="blog_post.blog_id"/>
        </xpath>
    </template>
    <template id="SEO_blog_post.custom_post_teaser" inherit_id="website_blog.post_teaser">
        <xpath expr="//a[1]" position="replace">
            <a t-attf-href="#{blog_post.blog_post_website_url}"
               class="text-reset text-decoration-none">
                <div t-if="opt_blog_list_view" t-field="blog_post.teaser" class="mt-2 o_wblog_read_text"/>
                <div t-else="" t-field="blog_post.teaser"
                     t-attf-class="mt-2 #{opt_blog_readable and 'o_wblog_normalize_font'}"/>
            </a>
        </xpath>
    </template>
    <template id="SEO_blog_post.posts_loop" inherit_id="website_blog.posts_loop">
        <xpath expr="//div[@class='mt-3']" position="replace">
            <div t-else="" class="mt-3">
                <a t-attf-href="#{blog_post.blog_post_website_url}" class="btn btn-primary">
                    Read more
                    <i class="fa fa-chevron-right ml-2"/>
                </a>
            </div>
        </xpath>
    </template>
    <template id="SEO_blog_post.post_cover_image" inherit_id="website_blog.post_cover_image">
        <xpath expr="//a" position="attributes">
            <attribute name="t-attf-href">#{blog_post.blog_post_website_url}</attribute>
        </xpath>
    </template>
    <template id="mcm_website_user_profile_main" inherit_id="website_profile.user_profile_main">
        <xpath expr="//div[@id='wrap']" position="before">
            <t t-set="head">
                <meta name="robots" content="noindex"/>
            </t>
        </xpath>
    </template>
    <template id="mcm_website_slide_main" inherit_id="website_slides.slide_main">
        <xpath expr="//div[@id='wrap']" position="before">
            <t t-set="head">
                <meta name="robots" content="noindex"/>
            </t>
        </xpath>
    </template>
    <template id="mcm_website_slide_main" inherit_id="website_slides.course_main">
        <xpath expr="//div[@id='wrap']" position="before">
            <t t-set="head">
                <meta name="robots" content="noindex"/>
            </t>
        </xpath>
    </template>
    <template id="digimoov_blog_page_button_inherit_centric" inherit_id="website_blog.post_teaser"
              name="Digimoov Blog Page Inherit Centric">
        <xpath expr="//div[@class='o_wblog_post_short_tag_section d-flex align-items-center flex-wrap pt-2']"
               position="after">
            <div class="mt-3">
                <a t-attf-href="#{blog_post.blog_post_website_url}" class="btn btn-primary">
                    Lire la suite
                    <i class="fa fa-chevron-right ml-2"/>
                </a>
            </div>
        </xpath>
    </template>
    <record id="courses_home_page" model="website.page">
        <field name="website_published">True</field>
        <field name="website_indexed">False</field>
        <field name="url">/slides</field>
        <field name="view_id" ref="website_slides.courses_home"/>
    </record>
    <record id="courses_all" model="website.page">
        <field name="website_published">True</field>
        <field name="website_indexed">False</field>
        <field name="url">/slides/all</field>
        <field name="view_id" ref="website_slides.courses_all"/>
    </record>
    <record id="website_info" model="website.page">
        <field name="website_published">True</field>
        <field name="website_indexed">False</field>
        <field name="url">/website/info</field>
        <field name="view_id" ref="website.website_info"/>
    </record>
    <record id="channel_list_page" model="website.page">
        <field name="website_published">True</field>
        <field name="website_indexed">False</field>
        <field name="url">/livechat</field>
        <field name="view_id" ref="website_livechat.channel_list_page"/>
    </record>
    <record id="rank_badge_main_page" model="website.page">
        <field name="website_published">True</field>
        <field name="website_indexed">False</field>
        <field name="url">/profile/ranks_badges</field>
        <field name="view_id" ref="website_profile.rank_badge_main"/>
    </record>
    <record id="terms_page" model="website.page">
        <field name="website_published">True</field>
        <field name="website_indexed">False</field>
        <field name="url">/shop/terms</field>
        <field name="view_id" ref="website_sale.terms"/>
    </record>
    <record id="users_page_main" model="website.page">
        <field name="website_published">True</field>
        <field name="website_indexed">False</field>
        <field name="url">/profile/users</field>
        <field name="view_id" ref="website_profile.users_page_main"/>
    </record>
</odoo>
