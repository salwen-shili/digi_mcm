<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="mcm_contact_document_charger_mes_documents1" name="Télécharger justificatif à domicile / CERFA">
        <t t-call="website.layout">
            <t t-set="additional_title">Téléchargement justificatif à domicile / CERFA</t>
            <div id="wrap" class="oe_structure oe_empt">
                <div class="container">
                    <div class="row">
                        <div class="row m-0">
                            <div class="col-lg-6">
                                <div class="card-shadow ">
                                    <img src="/mcm_contact_documents/static/img/3 Dossier d'insciption Digimoov.webp"
                                         class="img-responsive img img-fluid" data-original-title="" title=""
                                         aria-describedby="tooltip508208"/>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="contact-box ">
                                    <center>
                                        <span style="font-size: 28px;">CHARGER MES DOCUMENTS</span>
                                    </center>
                                    <br/>
                                    <!--Formulaire -->
                                    <form action="/upload_my_files1" method="post" id="digimoov_my_documents_form1"
                                          class="s_website_form container-fluid mt32" enctype="multipart/form-data"
                                          data-model_name="partner.document" data-success_page="/submitted_documents"
                                          data-editable-form="false" hide-change-model="true">

                                        <!-- Le client choisit s'il a un justificatif à domicile personnel -->

                                        <div class="form-group row form-field o_website_form_required">
                                            <div class="col-md-auto" style="font-size: 17px;">
                                                <label>Vous avez un justificatif de domicile à votre nom?</label>
                                            </div>
                                            <div class="col-md-auto" style="font-size: 17px;">
                                                <div style="display: inline-block">
                                                    <label for="domicile_personnel_oui">Oui</label>
                                                </div>
                                                <div style="display: inline-block">
                                                    <input type="radio" id="domicile_personnel_oui"
                                                           name="domicile_personnel" selected="0" value="oui"
                                                           required="1">
                                                    </input>
                                                </div>
                                            </div>
                                            <div class="col-md-auto" style="font-size: 17px;">
                                                <div style="display: inline-block">
                                                    <label for="domicile_personnel_non">Non</label>
                                                </div>
                                                <div style="display: inline-block">
                                                    <input type="radio" id="domicile_personnel_non"
                                                           name="domicile_personnel" selected="1" value="non"
                                                           required="1">
                                                    </input>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Charger le justificatif à domicile personnel dans la partie oui-->
                                        <div class="form-group row form-field o_website_form_required"
                                             id="justificatif_domicile_form">
                                            <div class="col-lg-9">
                                                <label class="col-form-label" for="justificatif_domicile">Charger le
                                                    Justificatif à domicile (moins de trois mois)
                                                </label>
                                            </div>
                                            <div class="col-lg-9 col-md-12 col-sm-12">

                                                <input type="file" name="justificatif_domicile"
                                                       id="justificatif_domicile_id_oui"
                                                       placeholder="Veuillez charger un fichier"
                                                       class="form-control o_website_form_input"
                                                       accept="image/*,application/pdf" onClick="alert_Client_click()"/>
                                            </div>
                                        </div>
                                        <script>
                                            function alert_Client_click()
                                            {
                                               if(domicile_personnel_oui.checked){
                                                  alert("Merci de vérifier que le justificatif est bien à votre nom et date de moins de trois mois.");
                                                  }
                                               else if(domicile_personnel_non.checked){
                                                   alert("Merci de vérifier que le justificatif est bien au nom de votre hébergeur et date de moins de trois mois.");
                                                    }

                                            }
                                        </script>

                                        <div class="form-group row form-field" id="identite_hebergeur_recto_form" style="display:none">
                                            <div class="col-lg-9 col-md-9">
                                                <label class="col-form-label" for="identite_hebergeur_recto">Charger la
                                                    pièce d'identité de l'hébergeur recto
                                                </label>
                                            </div>
                                            <div class="col-lg-9 col-md-12 col-sm-12 o_website_form_required">
                                                <input type="file" name="identite_hebergeur_recto"
                                                       id="identite_hebergeur_recto_id" required="1"
                                                       placeholder="Veuillez Charger un fichier"
                                                       class="form-control o_website_form_input"
                                                       accept="image/*,application/pdf"/>
                                            </div>
                                        </div>

                                        <!--Charger la pièce d'identité de l'hebergeur verso-->
                                        <div class="form-group row form-field " id="identite_hebergeur_verso_form" style="display:none">
                                            <div class="col-lg-9 col-md-9">
                                                <label class="col-form-label" for="identite_hebergeur_verso">Charger la
                                                    pièce d'identité de l'hébergeur verso
                                                </label>
                                            </div>
                                            <div class="col-lg-9 col-md-12 col-sm-12 o_website_form_required">
                                                <input type="file" name="identite_hebergeur_verso"
                                                       id="identite_hebergeur_verso_id" required="1"
                                                       placeholder="Veuillez Charger un fichier"
                                                       class="form-control o_website_form_input"
                                                       accept="image/*,application/pdf"/>
                                            </div>
                                        </div>

                                        <!--Charger l'attestation d'hebergement -->
                                        <div class="form-group row form-field" id="attestation_hebergement_form" style="display:none">
                                            <div class="col-lg-9 col-md-9">
                                                <label class="col-form-label" for="attestation_hebergement">Charger
                                                    l'attestation de l'hébergement
                                                </label>
                                            </div>
                                            <div class="col-lg-9 col-md-12 col-sm-12 o_website_form_required">
                                                <input type="file" name="attestation_hebergement" required="1"
                                                       id="attestation_hebergement_id"
                                                       placeholder="Veuillez Charger un fichier"
                                                       class="form-control o_website_form_input"
                                                       accept="image/*,application/pdf"/>
                                            </div>
                                        </div>

                                        <!--Charger CERFA -->
                                        <div class="form-group row form-field o_website_form_required">
                                            <div class="col-lg-9 col-md-9">
                                                <label class="col-form-label" for="identity">Charger CERFA
                                                </label>
                                            </div>
                                            <div class="col-lg-9 col-md-12 col-sm-12">
                                                <input type="file" name="cerfa" required="1" id="cerfa"
                                                       placeholder="Veuillez Charger un fichier"
                                                       class="form-control o_website_form_input"
                                                       accept="image/*,application/pdf"/>
                                            </div>
                                        </div>


                                        <!--Case à cocher pour confirmer -->
                                        <div class="form-group row form-field o_website_form_required">
                                            <div class="col-md-12 col-sm-12">
                                                <input type="checkbox" name="confirm_identity" id="confirm_identity"
                                                       required="1"/>
                                                <label for="confirm_identity"
                                                       style="margin-left:8px;font-weight:normal !important;display:unset !important;">
                                                    Je confirme avoir soumis le justificatif à domicile et le CERFA
                                                </label>
                                            </div>
                                        </div>

                                        <!--Bouton Envoyer -->
                                        <button type="submit" class="btn btn-primary centered-content"
                                                id="submit_documents" style="width: 75% !important;">
                                            Envoyer
                                            <span class="fa fa-1x fa-fw fa-long-arrow-right ml-1"></span>
                                        </button>
                                        <span id="o_website_form_result"></span>


                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>