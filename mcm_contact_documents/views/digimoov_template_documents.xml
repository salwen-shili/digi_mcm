<!--                                                <button type="button" style=" color: #fff; margin-top: 1rem;margin-bottom: 2rem;     margin-left: 1rem;  " class="float-right rkmd-btn btn-black ripple-effect ripple-yellow " id="submit_documents">-->
<!--                                                            Précédent </button>-->
<!--                                            </a>-->

<!--                                            <a href="/shop/cart" disabled="disabled" id="document_next">-->
