<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="mcm_contact_document_charger_mes_documents" name="Charger mes documents| Digimoov">
        <t name="Document" priority="29" t-name="document">
            <t t-call="website.layout">
                <t t-set="additional_title">Document</t>
                <link href="/digimoov_website_templates/static/src/css/register_form.css" rel="stylesheet"/>
                <link href="/mcm_contact_documents/static/src/css/upload_documents_dig.css" rel="stylesheet"/>

                <div class="container oe_website_sale py-2">
                    <div class="container-fluid">
                        <div class="row justify-content-center paper">
                            <div class=" col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 text-center p-0 mt-3 mb-2 ">
                                <div class="form-section">
                                    <div class="card px-0 pt-4 pb-0 mt-3 mb-3 bg-c">
                                        <h2 id="heading">INSCRIPTION</h2>
                                        <p class="p_class">Charger vos documents pour passer à l'étape suivante</p>
                                        <!--  progressbar  -->
                                        <ul id="progressbar">
                                            <li class="active" id="account">
                                                <strong>Coordonnées</strong>
                                            </li>
                                            <li id="personal" class="active">
                                                <strong>Documents</strong>
                                            </li>
                                            <li id="payment">
                                                <strong>Financement</strong>
                                            </li>
                                            <li id="confirm">
                                                <strong>Validation</strong>
                                            </li>
                                        </ul>
                                        <div class="progress">
                                            <div class=" progress-bar progress-bar-striped progress-bar-animated " role="progressbar" aria-valuemin="0" aria-valuemax="100"/>
                                        </div>
                                        <br/>
                                        <script> document.getElementsByClassName("progress-bar")[0].style.width= "50%"; </script>


                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="wrap" class="oe_structure oe_empt">
                            <div class="container" style="margin-block-end: 5rem;">

                                <div class="row">
                                    <form action="/upload_my_files" method="post" id="mcm_my_documents_form" class="s_website_form container-fluid mt32" enctype="multipart/form-data" data-model_name="partner.document" data-success_page="/submitted_documents" data-editable-form="false" hide-change-model="true">

                                        <div class="row m-0">
                                            <div class="col-lg-6">
                                                <div class="card-shadow ">
                                                    <img src="/mcm_contact_documents/static/img/3 Dossier d'insciption Digimoov.webp" class="img-responsive img img-fluid res-height" data-original-title="" title="" aria-describedby="tooltip508208"/>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="contact-box ">
                                                    <center>
                                                        <span style="font-size: 28px;">CHARGER MES DOCUMENTS</span>
                                                    </center>
                                                    <br/>

                                                    <input type="hidden" class="product_id" name="product_id" t-att-value="product_id"/>
                                                    <div class="form-group row form-field o_website_form_required">
                                                        <div class="col-lg-12 col-md-12">
                                                            <label class="col-form-label" style="font-weight:600 ;     margin-bottom: 0.5rem;">Pièce d'identité recto/verso</label>
                                                        </div>
                                                        <div class="col-lg-12 col-md-12">
                                                            <label class="col-form-label" for="identity">Charger la piéce d'identité recto : (*.jpg,*.png,*.pdf)  </label>
                                                        </div>
                                                        <div class="col-lg-12 col-md-12 col-sm-12">
                                                            <!--  <input type="file" name="identity" required="1" id="identity" placeholder="Veuillez Charger 1 fichier Recto verso ou 2 fichiers " class="form-control o_website_form_input" />  -->
                                                            <div class="file-upload" id="file-upload1" style="cursor:pointer">
                                                                <div class="file-select">
                                                                    <div class="file-select-button" id="fileName1">Choisir un fichier</div>
                                                                    <div class="file-select-name" id="noFile1">Aucun fichier choisi...</div>
                                                                    <input type="file" name="identity" id="identity" required="required"/>
                                                                </div>
                                                            </div>

                                                        </div>
                                                    </div>
                                                    <div class="form-group row form-field o_website_form_required">
                                                        <div class="col-lg-12 col-md-12">
                                                            <label class="col-form-label" for="identity">Charger la piéce d'identité verso :(*.jpg,*.png,*.pdf)  </label>
                                                        </div>
                                                        <div class="col-lg-12 col-md-12 col-sm-12">
                                                            <!--  <input type="file" name="identity2" required="1" id="identity2" placeholder="Veuillez Charger 1 fichier Recto verso ou 2 fichiers " class="form-control o_website_form_input" accept="image/*,application/pdf"/>  -->
                                                            <div class="file-upload" id="file-upload2">
                                                                <div class="file-select">
                                                                    <div class="file-select-button" id="fileName2">Choisir un fichier</div>
                                                                    <div class="file-select-name" id="noFile2">Aucun fichier choisi...</div>
                                                                    <input type="file" name="identity2" id="identity2" required="required"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div style="padding-top: calc(0.375rem + 1px); padding-bottom: calc(0.375rem + 1px); margin-bottom: 0;">
                                                        <input class="styled-checkbox" id="styled-checkbox-1" type="checkbox" value="value1" required="required"/>
                                                        <label class="label-box" for="styled-checkbox-1">Je confirme avoir soumis le recto et le verso</label>
                                                    </div>



                                                   <div class="form-group row">
                                                        <div class="col-md-8 col-lg-7">
                                                            <button type="submit" class="btn btn-primary centered-content" id="submit_documents" style="width: 100% !important;">
                                                        Envoyer
                                                                <span class="fa fa-1x fa-fw fa-long-arrow-right ml-1"></span>
                                                            </button>
                                                            <span id="o_website_form_result"></span>
                                                        </div>
                                                    </div>



                                                </div>
                                            </div>
                                        </div>
<!--                                        <div class=" col-lg-12 col-md-12 col-sm-12" style="padding-top: calc(0.375rem + 8px);-->
<!--                                            padding-bottom: calc(0.375rem + 1px);-->
<!--                                            display: flex;-->
<!--                                            justify-content: center; -->
<!--                                            flex-wrap: wrap;">-->
