<!--                                                           Suivant </button>-->
<!--                                            </a>-->
<!--                                            <span id="o_website_form_result"/>-->


<!--                                        </div>-->


                                    </form>
                                </div>
                            </div>


                        </div>
                    </div>
                    <div class="overlay"></div>
                    <div class="spanner">
                        <div class="loader"></div>
                    </div>

                    <div id="idenfy_popup" class="overlay_popup">

                        <div class="popup_doc" style="">

                            <h2 class="text-left">
                                <i class="fa fa-info-circle" style="color: #152856;"></i>
                            </h2>

                            <div class=" text-center">
                                <p id="notifMessage" style="font-size: 17px;color:#000">
                                </p>
                                <div style="text-align: -webkit-center;">
                                    <div id="popup_counter">6</div>
                                </div>
                                <div class="" style="margin-block-start: 1.5rem;">

                                    <div class="slider">
                                        <div class="line"></div>
                                        <div class="break dot1"></div>
                                        <div class="break dot2"></div>
                                        <div class="break dot3"></div>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>



            </t>
        </t>
    </template>
</odoo>