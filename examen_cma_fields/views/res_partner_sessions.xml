<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- historic partner sessions form view -->
        <record model="ir.ui.view" id="historic_partner_sessions_form_view">
            <field name="name">partner.sessions.history.form</field>
            <field name="model">partner.sessions</field>
            <field name="arch" type="xml">
                <form string="Historique Client Sessions ">
                    <sheet>
                        <group>
                        <group>
                            <field name="client_id" string="Client"/>
                            <field name="session_id" string="Session"/>
                            <field name="module_id" string="Module"/>
                            <field name="company_id"/>
                            <field name="justification" string="Absence justifié"
                                   attrs="{'invisible': [('paiement', '=', True)]}"/>
                            <field name="paiement" string="Changement de ville"
                                   attrs="{'invisible': [('justification', '=', True)]}"/>
                            <field name="attachment_ids" string="Justificatif" widget="many2many_binary" nolabel="1"
                                   attrs="{'invisible': [('justification', '=', False)]}"/>
                            <field name="autre_raison"
                                   attrs="{'invisible': ['|',('justification', '=', True), ('paiement', '=', True)]}"
                                   string="Notes"/>
                        </group>
                            <group string="Statistiques sur 360 Learning">
                                <field name="stat_funding" string="Financement"/>
                                <field name="funding_method" string="Mode de financement"/>
                                <field name="average_score" string="Score Moyen"/>
                                <field name="last_login" string="Dernière Connexion"/>
                                <field name="total_time_hours" string=" Durée effective formation"/>
                                <field name="date_creation" string="Date d'inscription"/>
                                <field name="reactions" string="Réactions"/>
                                <field name="folder_number_cpf" string="N° de Dossier CPF"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- historic partner sessions tree/list view -->
        <record model="ir.ui.view" id="historic_partner_sessions_tree_view">
            <field name="name">partner.sessions.history.tree</field>
            <field name="model">partner.sessions</field>
            <field name="arch" type="xml">
                <tree string="Historique Client Sessions ">
                    <field name="client_id" string="Client"/>
                    <field name="session_id" string="Session"/>
                    <field name="module_id" string="Module"/>
                    <field name="justification" string="Absence justifié"/>
                    <field name="paiement" string="Changement de ville"/>
                    <field name="attachment_ids" string="Justificatif d'absence" widget="many2many_binary"/>
                    <field name="autre_raison" string="Notes"/>
                    <field name="stat_funding" string="Financement" optional="show"/>
                    <field name="funding_method" string="Mode de financement" optional="show"/>
                    <field name="average_score" string="Score Moyen" optional="hide"/>
                    <field name="last_login" string="Dernière Connexion" optional="hide"/>
                    <field name="total_time_hours" string="Durée effective formation" optional="show"/>
                    <field name="date_creation" string="Date d'inscription" optional="show"/>
                    <field name="reactions" string="Réactions" optional="hide"/>
                    <field name="folder_number_cpf" string="N° de Dossier CPF" optional="hide"/>
                </tree>
            </field>
        </record>
        <!-- Action -->
        <record id="action_history_session_ville" model="ir.actions.act_window">
            <field name="name">Historique des sessions</field>
            <field name="res_model">partner.sessions</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Ajouter une session!</p>
            </field>
        </record>

        <!-- menu des villes sera afficher apres menu configuration dans l'interface de convocation-->
        <menuitem id="action_history_menu" name="Historique sessions"
                  parent="contacts.menu_contacts"
                  action="action_history_session_ville"
                  sequence="4"/>
    </data>
</odoo>