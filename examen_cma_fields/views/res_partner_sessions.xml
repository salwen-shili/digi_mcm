<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- historic partner sessions form view -->
        <record model="ir.ui.view" id="historic_partner_sessions_form_view">
            <field name="name">partner.sessions.history.form</field>
            <field name="model">partner.sessions</field>
            <field name="arch" type="xml">
                <form string="Historique Client Sessions ">
                    <sheet>
                        <group>
                            <field name="client_id" string="Client"/>
                            <field name="session_id" string="Session"/>
                            <field name="theoretic" string="Théorique"/>
                            <field name="practical" string="Pratique"/>
                            <field name="company_id"/>
                            <field name="justification" string="Absence justifié"
                                   attrs="{'invisible': [('paiement', '=', True)]}"/>
                            <field name="paiement" string="Changement de ville"
                                   attrs="{'invisible': [('justification', '=', True)]}"/>
                            <field name="attachment_ids" string="Justificatif" widget="many2many_binary" nolabel="1"
                                   attrs="{'invisible': [('justification', '=', False)]}"/>
                            <field name="autre_raison"
                                   attrs="{'invisible': ['|',('justification', '=', True), ('paiement', '=', True)]}" string="Notes"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- historic partner sessions tree/list view -->
        <record model="ir.ui.view" id="historic_partner_sessions_tree_view">
            <field name="name">partner.sessions.history.tree</field>
            <field name="model">partner.sessions</field>
            <field name="arch" type="xml">
                <tree string="Historique Client Sessions ">
                    <field name="client_id" string="Client"/>
                    <field name="session_id" string="Session"/>
                    <field name="justification" string="Absence justifié"/>
                    <field name="paiement" string="Changement de ville"/>
                    <field name="attachment_ids" string="Justificatif" widget="many2many_binary"/>
                    <field name="autre_raison" string="Notes"/>
                </tree>
            </field>
        </record>
        <!-- Action -->
        <record id="action_history_session_ville" model="ir.actions.act_window">
            <field name="name">Historique des sessions</field>
            <field name="res_model">partner.sessions</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Ajouter une session!</p>
            </field>
        </record>

        <!-- menu des villes sera afficher apres menu configuration dans l'interface de convocation-->
        <menuitem id="action_history_menu" name="Historique sessions"
                  parent="contacts.menu_contacts"
                  action="action_history_session_ville"
                  sequence="4"/>
    </data>
</odoo>