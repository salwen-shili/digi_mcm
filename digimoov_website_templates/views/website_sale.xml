<odoo>
    <template id="digimoov_website_sale_total" inherit_id="website_sale.total">
        <xpath expr="//tr[@id='order_total_taxes']" position="after">
            <tr id="order_instalment" t-if="website_sale_order.instalment_number==2 or website_sale_order.instalment_number==3" style="visibility:visible">
                <td class="text-right border-0">
                    <label for="checkbox_instalment">
                        <span>Payer montant sur </span>
                        <span t-field="website_sale_order.instalment_number" style="white-space: nowrap;"/>
                        <span> fois </span>
                    </label>
                </td>
                <td class="text-xl-right border-0">

                    <input type="checkbox" id="checkbox_instalment" style="white-space: nowrap;"
                           class="text-xl-right border-0" t-att-checked="website_sale_order.instalment"
                           t-att-value="website_sale_order.instalment"/>

                </td>
            </tr>
            <body onload="verify_checked()">
                <tr id="order_instalment_number" style="visibility: hidden;">
                    <td class="text-right border-0">Tranches:</td>
                    <td class="text-xl-right border-0">
                        <span t-field="website_sale_order.instalment_number" style="white-space: nowrap;"/>
                    </td>
                </tr>
            </body>
        </xpath>
        <xpath expr="//tr[@id='order_total']" position="after">
            <body onload="verify_checked()">
                <tr id="order_amount_to_pay" style="visibility: hidden;">
                    <td class="text-right">
                        <strong>Montant Ã  payer:</strong>
                    </td>
                    <td class="text-xl-right">
                        <strong t-field="website_sale_order.amount_to_pay" class="monetary_field"
                                t-options='{"widget": "monetary", "display_currency": website_sale_order.pricelist_id.currency_id}'/>
                    </td>
                </tr>
            </body>
        </xpath>
    </template>
</odoo>