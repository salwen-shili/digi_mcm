<!-- PACKS--> 
<template id="digimoov_website_templates.pack_solo">
    <div class="card border-0 shadow border-pricing">
                                       
        <t t-foreach="digimoov_products" t-as="product">
            <t t-if="product.default_code=='basique'">
            <div class="text-center text-white border-0 pack-wrap ">
                <br />
                <p style="word-break: break-word; position: relative; z-index: 0;" class="">
                    <strong class="pack-name">
                        SOLO
                        <font style="font-size: 14px;">&amp;nbsp;</font>
                    </strong>
                </p>
                <p t-att-class="'blink-soft'if product.cpf_available else 'blink-soft solo-non-cpf' ">
                    <t t-if="not promo">
                        
                        <b><t t-if="product.cpf_available == false">NON </t>ELIGIBLE AU CPF</b>
                    </t>
                    <b style="word-break: break-word; position: relative; z-index: 0;" class=""> &amp;nbsp; &amp;nbsp;</b>
                </p>
                <br />
            </div>
           
                <form action="/shop/cart/update" method="post" id="form-1-1">
                    <input type="hidden" class="product_id" name="product_id" t-att-value="product.id" />
                    <input type="hidden" name="promo" t-att-value="promo.id" t-if="promo" />
                    <div class="card-body">
                       <t t-call="digimoov_website_templates.pricing_table_content_solo" />
                        <p class="text-center font-weight-bolder text-dark h1 display-4 mb-0">
                            <p class="text-center font-weight-bolder text-dark h1 display-4 mb-0" t-if="not promo">
                                <span t-esc="round(product.list_price)" />
                                <span t-esc="product.currency_id.symbol" />
                            </p>
                            <p class="text-center font-weight-bolder text-dark h1 display-4 mb-0" t-if="promo">
                                <t t-foreach="promo.item_ids" t-as="item">
                                    <t t-if="item.product_id.id==product.id">
                                        <span t-esc="round(item.fixed_price)" />
                                        <span t-esc="product.currency_id.symbol" />
                                    </t>
                                </t>
                            </p>
                        </p>
                        <t t-if="promo and promo.name!='box2home'">
                            <p class="text-center font-weight-bolder text-secondary" style="margin-top:68px">
                                <b class="promo-code">
                                    <t>avec le code</t>
                                    <t t-esc="promo.code" />
                                </b>
                            </p>
                        </t>
                        <p class="medium text-center font-weight-bolder text-secondary paiement" t-if="not partenaire or partenaire==''">
                            Paiement 1<t t-if="product.instalment_number>1"> ou <t t-esc="product.instalment_number"></t></t>&amp;nbsp;fois
            </p>
                        <br />
                        <button class="btn btn-block text-white btn-inscription" onClick="(function(){ document.getElementById('form-1-1').submit();return false;})();">
Je m'inscris
            </button>
                    </div>
                </form>
            </t>
        </t>
    </div>
</template>

