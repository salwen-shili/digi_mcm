<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="inherit_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']" position="after">
                <div class="col-sm-12">
                    <label for="est_intervenant" string="Formatteur :">Formatteur </label>
                          <field name="est_intervenant" widget="boolean_toggle"/>
                </div>
            </xpath>
            <xpath expr="//page[@name='sales_purchases']" position="attributes">
                <attribute name="attrs">{'invisible': [('est_intervenant', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//page[@name='accounting']" position="attributes">
                <attribute name="attrs">{'invisible': [('est_intervenant', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//page[@name='financement']" position="attributes">
                <attribute name="attrs">{'invisible': [('est_intervenant', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//page[@name='note_exam']" position="attributes">
                <attribute name="attrs">{'invisible': [('est_intervenant', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_view_partner_invoices']" position="attributes">
                <attribute name="attrs">{'invisible': [('est_intervenant', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//group[2]" position="attributes">
                <attribute name="attrs">{'invisible': [('est_intervenant', '=', True)]}</attribute>
            </xpath>

        </field>
    </record>
</odoo>