<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action -->
    <record id="action_intervenant_fonction" model="ir.actions.act_window">
        <field name="name">Les fonction des intervenants</field>
        <field name="res_model">intervenant.fonction</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Ajouter une fonction</p>
        </field>
    </record>
    <!-- Tree View de type bittom -->
    <record id="intervenant_fonction_view_tree" model="ir.ui.view">
        <field name="name">intervenant.fonction.tree</field>
        <field name="model">intervenant.fonction</field>
        <field name="arch" type="xml">
            <tree string="Fonction" editable="bottom">
                <field name="name" string="Fonction" required="True"/>
            </tree>
        </field>
    </record>
    <!--inherit configuration menu and add menu of "Les fonctions)-->
    <menuitem id="intervenant_fonction_id" name="Les fonctions"
              parent="mcm_session.mcm_academy_session_config_main_menu" action="action_intervenant_fonction"
              sequence="17"/>
</odoo>