<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="res_config_view_onfido_form" model="ir.ui.view">
        <field name="name">res.config.view.onfido.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='website_settings']" position="after">
                <h2>Onfido</h2>
                <div class="row mt16 o_settings_container" id="onfido">
                    <div class="col-12 col-lg-6 o_setting_box" id="onfido_details">
                        <div class="o_setting_right_pane">
                            <div class="row">
                                <label class="col-lg-3 o_light_label" string="API Key" for="onfido_api_key_live"/>
                                <field name="onfido_api_key_live" class="oe_inline"/>
                            </div>
                             <div class="row">
                                <label class="col-lg-3 o_light_label" string="Workflow Id" for="onfido_api_key_live"/>
                                <field name="onfido_workflow_id" class="oe_inline"/>
                            </div>
                            <div class="row">
                                <label class="col-lg-3 o_light_label" string="Referrer" for="referrer"/>
                                <field name="referrer" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    </data>
</odoo>