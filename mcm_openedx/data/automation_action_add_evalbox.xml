<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- automated action to execute l'ajout d'ione lorsque le client ajout une date exman -->
    <record id="ajout sur moocitt" model="base.automation">
        <field name="name">Base Automation: Ajout a moocit lors de l'ajout de field evalbox testt</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="trigger">on_create_or_write</field>
        <field name="trigger_field_ids" eval="[(4,ref('crm_marketing_automation.field_res_partner__numero_evalbox'))]"/>
        <field name="active" eval="True"/>
        <field name="state">multi</field>
        <field name="code">
            action = model.ajoutMoocit_automatique()
        </field>

    </record>
</odoo>