<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="en_attent_vieww" model="ir.ui.view">
        <field name="name">En attente</field>
        <field name="model">mcm_openedx.enattente</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="[('name','ilike',self)]"></field>
                <field name="externalId" filter_domain="[('externalId','ilike',self)]"></field>

            </search>
        </field>
    </record>
    <record id="mcm_openedx_attente_tree_vieww" model="ir.ui.view">
        <field name="name">Apprenants En attente</field>
        <field name="model">mcm_openedx.enattente</field>
        <field name="arch" type="xml">
            <tree string="Apprennat en attente sur wedof" >
                <field name="name"/>
                <field name="existant"/>
                <field name="externalId"/>
                <field name="lastName"/>
                <field name="firstName"/>
                <field name="date_edof"/>
                <field name="state"/>
                <field name="existantsurmooc"/>
            </tree>
        </field>
    </record>
    <record id="mcm_openedx_attente_form_vieww" model="ir.ui.view">
        <field name="name">Apprenants En attente</field>
        <field name="model">mcm_openedx.enattente</field>
        <field name="arch" type="xml">
            <form string="Apprennat">
                <sheet>
                    <h5>Email</h5>
                    <field name="name" style="color:red"/>
                    <br/>
                    <h5>Date Edof</h5>
                    <field name="date_edof" style="color:red"/>
                    <br/>
                    <h5>State</h5>
                    <field name="state"/>
                    <br/>
                    <br/>
                    <h5>Numero CPF</h5>
                    <field name="externalId"/>
                    <br/>
                    <h5>Nom</h5>
                    <field name="firstName"/>
                    <br/>
                    <h5>Prenom</h5>
                    <field name="lastName"/>
                    <h5>Exist sur moocit</h5>
                    <field name="existantsurmooc"/>

                    <h5>Exist sur ODOO</h5>
                    <field name="existant"/>

                </sheet>

            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="mcm_openedx_attente_list_actionn_mcm">
        <field name="name">Les Apprenants via Wedof</field>
        <field name="res_model">mcm_openedx.enattente</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
    <menuitem id="att_menu_mcmm" name="En attente" parent="main_mcm_openedx_menu"
              action="mcm_openedx_attente_list_actionn_mcm"/>
</odoo>