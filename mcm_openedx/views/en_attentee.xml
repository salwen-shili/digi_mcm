<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="en_attent_view" model="ir.ui.view">
        <field name="name">En attente</field>
        <field name="model">mcm_openedx.enattente</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="[('name','ilike',self)]"></field>
                <field name="externalId" filter_domain="[('externalId','ilike',self)]"></field>

            </search>
        </field>
    </record>


    <record id="mcm_openedx_attente_tree_view" model="ir.ui.view" >
        <field name="name">WEDOF</field>
        <field name="model">mcm_openedx.enattente</field>
        <field name="arch" type="xml">
            <tree string="Apprennat en attente sur EDOF">
                <field name="externalId"/>
                <field name="lastName"/>
                <field name="firstName"/>
                <field name="name"/>
                <field name="date_edof"/>
                <field name="state"/>
                <field name="existantsurmooc"/>
                <field name="existant"/>
            </tree>
        </field>
    </record>
    <record id="mcm_openedx_attente_form_view" model="ir.ui.view" >
        <field name="name">Apprenants En attente</field>
        <field name="model">mcm_openedx.enattente</field>
        <field name="arch" type="xml">
            <form string="Apprennat">
                <sheet>
                    <h5>Email</h5>
                    <field name="name" style="color:red"/>
                    <br/>
                    <h5>Date Edof</h5>
                    <field name="date_edof" style="color:red"/>
                    <br/>
                    <h5>State</h5>
                    <field name="state"/>
                    <br/>
                    <br/>
                    <h5>Numero CPF</h5>
                    <field name="externalId"/>
                    <br/>
                    <h5>Nom</h5>
                    <field name="firstName"/>
                    <br/>
                    <h5>Prenom</h5>
                    <field name="lastName"/>
                    <h5>Exist sur moocit</h5>
                    <field name="existant"/>
                    <h5>Exist sur ODOO</h5>
                    <field name="existantsurmooc"/>
                </sheet>

            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="mcm_openedx_attente_kanban">
        <field name="name">name</field>
        <field name="model">mcm_openedx.enattente</field>
        <field name="arch" type="xml">
            <kanban default_group_by="name">
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <div class="oe_dropdown_kanban">
                                <!-- dropdown menu -->
                                <div class="oe_dropdown_toggle">
                                    <i class="fa fa-bars fa-lg"/>
                                    <ul class="oe_dropdown_menu">
                                        <li>
                                            <a type="delete">Delete</a>
                                        </li>

                                    </ul>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                            <div t-attf-class="oe_kanban_content">
                                <!-- title -->


                                Nom:
                                <field name="lastName"/>
                                <br/>

                                Prenom:
                                <field name="firstName"/>
                                <br/>
                                Email de l'Apprenant:
                                <field name="name"/>
                                <br/>
                                Date Debut Formation:
                                <field name="date_edof"/>
                                <br/>
                                Staut De l'apprannat:
                                <field name="state"/>
                                <br/>

                                <br/>
                                ExternalId
                                <field name="externalId"/>

                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record model="ir.actions.act_window" id="mcm_openedx_attente_list_action">
        <field name="name">Les Apprenants via Wedof</field>
        <field name="res_model">mcm_openedx.enattente</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
    <menuitem id="att_menu_mcm" name="En attente" parent="main_mcm_openedx_menu"
              action="mcm_openedx_attente_list_action"/>


</odoo>