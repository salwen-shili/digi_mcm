<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="jotform_sub_search_view" model="ir.ui.view">
        <field name="name">JOTFORM</field>
        <field name="model">mcm_openedx.form_info</field>
        <field name="arch" type="xml">
            <search>
                <field name="email"></field>
                <filter name="group_societe" string="Company" icon="terp-partner"
                        context="{'group_by':'societe'}"/>
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="jotform_sub_tree_view">
        <field name="name">JOTFORM</field>
        <field name="model">mcm_openedx.form_info</field>
        <field name="arch" type="xml">
            <tree delete="false">
                <field name="email"/>
                <field name="partner_id"/>
                <field name="societe"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="jotform_sub_form_view">
        <field name="name">JOTFORM</field>
        <field name="model">mcm_openedx.form_info</field>
        <field name="arch" type="xml">
            <form string="Course Form" delete="false">
                <sheet>
                    <group>
                        <field name="email"/>
                        <field name="partner_id"/>
                        <field name="societe"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record model="ir.actions.act_window" id="jotform_sub_list_action">
        <field name="name">JOTFORM</field>
        <field name="res_model">mcm_openedx.form_info</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_societe': 1}</field>

    </record>
    <menuitem id="jotform_menu" name="JOTFORM" web_icon="mcm_openedx,static/src/jotf.png"/>
     <menuitem id="jotform_sub_menu" name="Submissions" parent="jotform_menu" action="jotform_sub_list_action"/>

</odoo>