<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <record model="ir.ui.view" id="type_event_calendly_tree_view">
        <field name="name">Calendly Events</field>
        <field name="model">mcm_openedx.calendly_integration</field>
        <field name="arch" type="xml">
            <tree>
                <field name="owner"/>

                <field name="name"/>
                <field name="active"/>
                <field name="created_at"/>
                <field name="scheduling_url"/>
                <button name="test_url" string="Lien event" class="oe_highlight" type="object"                />
                <field name="updated_at"/>
                <field name="uri"/>
                <field name="slug"/>

            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="type_event_calendly_form_view">
        <field name="name">Calendly Events</field>
        <field name="model">mcm_openedx.calendly_integration</field>
        <field name="arch" type="xml">
            <form string="Course Form">
                <sheet>
                    <group>
                        <field name="owner"/>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="created_at"/>
                        <field name="scheduling_url"/>
                        <field name="updated_at"/>
                        <field name="uri"/>
                        <field name="slug"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record model="ir.actions.act_window" id="calendly_type_event_list_action">
        <field name="name">Type Event Calendly</field>
        <field name="res_model">mcm_openedx.calendly_integration</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="calendly_menu" name="Calendly" parent="main_mcm_openedx_menu"/>
    <menuitem id="type_event_calendly_menu" name="Type Event" parent="calendly_menu"
              action="calendly_type_event_list_action"/>

</odoo>
