    <!-- Vue Form session-->
    <record model="ir.ui.view" id="rapport_form_view">
        <field name="name">Rapport Finance</field>
        <field name="model">mcm_openedx.rapportstripe</field>
        <field name="arch" type="xml">

            <form>
                <sheet>
                    <group>

                        <field name="seller_message"/>
                        <field name="created"/>
                        <field name="amount"/>
                        <field name="customer_email"/>
                        <field name="captured"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="rapport_tree_view">
        <field name="name">Rapport Finance</field>
        <field name="model">mcm_openedx.rapportstripe</field>
        <field name="arch" type="xml">

            <tree>

                <field name="seller_message"/>
                <field name="created"/>
                <field name="amount"/>
                <field name="customer_email"/>
                <field name="captured"/>


            </tree>
        </field>
    </record>


    <record model="ir.actions.act_window" id="mcm_openedx.rapportstripe_list_action_stripe">
        <field name="name">Rapport Finance</field>
        <field name="res_model">mcm_openedx.rapportstripe</field>
        <field name="view_mode">tree,form</field>

    </record>
    <!-- menu des villes sera afficher apres menu configuration dans l'interface de convocation-->
    <menuitem id="rapport_action_stripe" name="Stripe"
              parent="rapport_action"
              action="mcm_openedx.rapportstripe_list_action_stripe"
              sequence="5"/>

</odoo>

  