<odoo>
    <record model="ir.actions.act_window" id="act_coach_graph">
        <field name="name">Coaches</field>
        <field name="res_model">mcm_openedx.coach</field>
        <field name="view_mode">kanban</field>
        <field name="view_id"
               ref="mcm_openedx.view_openacad_session_kanban"/>
    </record>
    <record model="ir.actions.act_window" id="act_session_graph">
        <field name="name">Session</field>
        <field name="res_model">mcmacademy.session</field>
        <field name="view_mode">tree</field>
        <field name="view_id"
               ref="mcm_session.mcmacademy_session_tree_view"/>
    </record>
    <!--My Dashboard-->
    <record model="ir.ui.view" id="mcm_openedx_dashbord">
        <field name="name">My Dashboard</field>
        <field name="model">board.board</field>
        <field name="arch" type="xml">
            <form string="My Dashboard">
                <board style="2-1">
                    <column>
                        <action
                                string="Coaches"
                                name="%(act_coach_graph)d"
                                height="150"
                                width="510"/>

                        <action
                                string="Session"
                                name="%(act_session_graph)d"
                                height="150"
                                width="510"/>
                    </column>
                    <column>
                        <action
                                string="Coaches"
                                name="%(act_coach_graph)d"
                                height="150"
                                width="510"/>
                    </column>
                </board>
            </form>
        </field>
    </record>

    <!--My Dashboard Action-->
    <record model="ir.actions.act_window" id="open_board_my_dash_action">
        <field name="name">My Dashboard</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="mcm_openedx_dashbord"/>
    </record>

    <menuitem id="main_dashbord" name="Dashbord" parent="main_mcm_openedx_menu" action="open_board_my_dash_action"
              sequence="1"/>
</odoo>