<odoo>


    <record model="ir.actions.act_window" id="act_coach_graph">
        <field name="name">Coaches</field>
        <field name="res_model">mcm_openedx.coach</field>
        <field name="view_mode">graph</field>
        <field name="view_id"
               ref="mcm_openedx_coach_graph_view"/>
    </record>
    <record model="ir.actions.act_window" id="act_stat_graph">
        <field name="name">Statestiques Cours</field>
        <field name="res_model">mcm_openedx.course_stat</field>
        <field name="view_mode">graph</field>
        <field name="view_id"
               ref="mcm_openedx_stat_graph_view"/>
    </record>
    <!--My Dashboard-->
    <record model="ir.ui.view" id="mcm_openedx_dashbord">
        <field name="name">My Dashboard</field>
        <field name="model">board.board</field>
        <field name="arch" type="xml">
            <form string="My Dashboard">
                <board style="4-1">
                    <column>


                        <action name="%(act_stat_graph)d" string="Statistiques Cours" view_mode="graph"
                                context="{'lang': 'fr_FR', 'tz': False, 'uid': 1, 'allowed_company_ids': [1, 1, 2], 'group_by': [], 'graph_measure': 'seconde', 'graph_mode': 'bar', 'graph_groupbys': ['idcour'], 'dashboard_merge_domains_contexts': False}"
                                domain="[]" modifiers="{}"/>
                              <action name="%(act_coach_graph)d" string="Coaches" view_mode="graph"
                                context="{'lang': 'fr_FR', 'tz': False, 'uid': 1, 'allowed_company_ids': [1, 1, 2], 'group_by': [], 'graph_measure': 'nombre_apprenant', 'graph_mode': 'pie', 'graph_groupbys': ['coach_name'], 'dashboard_merge_domains_contexts': False}"
                                domain="[]" modifiers="{}"/>

                    </column>

                </board>
            </form>
        </field>
    </record>

