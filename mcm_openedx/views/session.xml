<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <record id="session_search_view" model="ir.ui.view">
        <field name="name">Sessions</field>
        <field name="model">mcmacademy.session</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"></field>
                <filter name="name" string="MCM Academy"
                        domain="[('company_id','=',1)]"/>
                <filter name="group_company_id" string="SocietÃ©" icon="terp-partner"
                        context="{'group_by':'company_id'}"/>
            </search>
        </field>
    </record>

    <!-- Vue Form session-->
    <record model="ir.ui.view" id="learning_session_form_view">
        <field name="name">Session</field>
        <field name="model">mcmacademy.session</field>
        <field name="inherit_id" ref="mcm_session.mcmacademy_session_form_view"/>
        <field name="arch" type="xml">
            <header>

            </header>
            <data>
            </data>
        </field>
    </record>
    <record model="ir.ui.view" id="session_tree_view">
        <field name="name">Sessions</field>
        <field name="model">mcmacademy.session</field>
        <field name="inherit_id" ref="mcm_session.mcmacademy_session_tree_view"></field>
        <field name="arch" type="xml">

            <field name="diplome_vise" position="replace">
                <field name="date_debut"/>
                <field name="date_fin"/>

            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_mcmacademy_session_kanban">
        <field name="name">mcm academy session kanban</field>
        <field name="model">mcmacademy.session</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column o_kanban_project_tasks" archivable="false" on_create="quick_create"
                    filter_domain="[('company_id','=',1)]" default_group_by="stage_id">
                <field name="color"/>
                <field name="stage_id"/>
                <field name="name"/>
                <field name="type_client"/>
                <field name="sous_traitance"/>
                <field name="action_type_id"/>
                <field name="domaine_formation"/>
                <field name="diplome_vise"/>
                <templates style="background:red">
                    <t t-name="kanban-box" style="background:red">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_content oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown" t-if="!selection_mode" groups="base.group_user">
                                <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown"
                                   data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">
                                        Modifier la session
                                    </a>
                                    <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">
                                        supprimer
                                    </a>
                                    <div role="separator" class="dropdown-divider"></div>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"
                                            style="font-weight: bold; color: #3498DB;">
                                        <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div style="font-weight: bold;">
                                    <field name="date_debut" filter_domain="[('date_debut','like',2022)]"/>
                                    -
                                    <field name="date_fin"/>
                                </div>
                                <div>
                                    <small style="font-weight: bold">
                                        <field name="count"/>
                                        clients
                                    </small>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left o_kanban_record_subtitle text-muted">
                                    <field name="number"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <i class="fa fa-fw o_button_icon fa-users"></i>
                                    <field name="count"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record model="ir.actions.act_window" id="session_list_action">
        <field name="name">Les Sessions</field>
        <field name="res_model">mcmacademy.session</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_group_company_id': 1}</field>

    </record>


</odoo>
