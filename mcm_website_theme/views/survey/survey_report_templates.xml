<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="bolt_certification_report_view" inherit_id="survey.certification_report_view">
        <xpath expr="//div[@class='article certification-wrapper']" position="replace">
            <t t-set="data_report_landscape" t-value="False"/>
            <div t-att-data-oe-model="user_input._name" t-att-data-oe-id="user_input.id" class="article">
                <section
                        style="
                            background-image: url('/mcm_website_theme/static/src/img/certificate_template.png');
                            background-repeat: no-repeat;
                            background-size: 100% 100%;
                            height: 610px;
                            width: 860px;
                          "
                                    >
                                        <div
                                                style="
                              display: flex;
                              align-items: center;
                              justify-content: space-around;
                              align-content: center;
                              font-family: 'Roboto', sans-serif;

                              text-align: center;
                            "
                    >
                        <div class="">
                            <div class="">
                                <div
                                        style="
                                            padding-top: 150px !important;
                                            font-size: 35px;
                                            margin-bottom: 13px;
                                            text-align: center;
                                            line-height: 60px;
                                          "
                                >
                                    MCM ACADEMY
                                    <br/>
                                    Certifie que:
                                </div>
                                <div
                                        style="
                                            margin: 30px 0;
                                            font-size: 40px;
                                            text-align: center;
                                            color: #fed225;
                                            text-transform: uppercase;
                                            font-weight: 800;
                                          "
                                >
                                    <span t-esc="user_input.partner_id.name or user_input.email"/>
                                </div>
                                <div style="font-size: 25px">Réalisé avec succès</div>
                                <div
                                        style="font-size: 33px; margin: 22px 0px 34px; color: #0000008c"
                                >
                                    <span t-field="user_input.survey_id.display_name"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="text-align: center; padding-right: 337px; font-size: 20px">
                        Date de la certification :
                        <span t-field="user_input.create_date" t-options='{"widget": "date"}'/>
                    </div>
                </section>
            </div>
        </xpath>
    </template>
</odoo>
