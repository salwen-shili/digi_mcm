<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="bolt_survey_init" inherit_id="survey.survey_init">
        <xpath expr="//div[1]" position="before">
            <script type="text/javascript" src="/mcm_website_theme/static/src/js/survey_popup.js" />
            <link rel="stylesheet" href="/mcm_website_theme/static/src/css/popup.css" />
            <style>
                html {
            scroll-behavior: smooth;
            }
            </style>
            <!-- popup-->
            <div id="popup1" class="overlay">
                <div class="popup">
                    <h2 class="text-left">
                        <i class="fa fa-info-circle" style="color: #111111"></i>
                    </h2>
                    <a class="close" onclick="closePopup(); scrolltoTop();">
                        <i class="fa fa-times"></i>
                    </a>
                    <!-- <div class="content">
                        <p id="notifMessage" style="text-align: center; font-size: 16px"></p>
