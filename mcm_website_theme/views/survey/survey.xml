<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="bolt_survey_init" inherit_id="survey.survey_init">
        <xpath expr="//div[1]" position="before">
            <input type="hidden" name="exam_not_passed" id="exam_not_passed" t-att-value="exam_not_passed"/>
            <input type="hidden" name="exam_success" id="exam_success" t-att-value="exam_success"/>
        </xpath>
    </template>
    <template id="bolt_survey_sfinished" inherit_id="survey.sfinished">
        <xpath expr="//t[1]" position="replace">
            <t t-call="website.layout">
                <div class="wrap">
                    <div class="container">
                        <div class="row">
                            <div class="row m-0 mt40 mb64">
                                <div class="col-lg-6">
                                    <div class="card-shadow ">
                                        <img src="/mcm_website_theme/static/src/img/examen/conditions-examens-taxi-vtc-vmdtr.webp"
                                             data-srcSafari="/mcm_website_theme/static/src/img/examen/conditions-examens-taxi-vtc-vmdtr.png"
                                             class="img-responsive img img-fluid lazy" data-original-title="" title=""
                                             aria-describedby="tooltip508208"/>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <br/>
                                    <br/>
                                    <br/>
                                    <h3 class="text-center">
                                        <i class="fa fa-check-circle fa-2x text-success" role="img" aria-label="Success"
                                           title="Success"/>
                                    </h3>
                                    <h3 class="text-center">Merci d'avoir pris le temps de finaliser votre examen. Votre
                                        copie sera corrigée dans un délai de 24h hors week-end. Pour rappel pour être
                                        admis il faut avoir une moyenne supérieur ou égale à 8/20 (40%).
                                    </h3>
                                    <div t-if="survey.certificate" class="text-center mt16 mb16">
                                        <a role="button" class="btn btn-primary btn-lg"
                                           t-att-href="'/survey/%s/get_certification' % survey.id">
                                            <i class="fa fa-fw fa-trophy" role="img" aria-label="Download certification"
                                               title="Download certification"/>
                                            Download certification
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>