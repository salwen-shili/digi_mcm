<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mcm_product_public_category" model="ir.ui.view">
        <field name="name">product.public.category.form</field>
        <field name="model">product.public.category</field>
        <field name="inherit_id" ref="website_sale.product_public_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="id" invisible="1"/>
                <field name="code" attrs="{'invisible': [('parent_id', '!=', False)]}"/>
            </xpath>
        </field>
    </record>
    <!-- Heriter vu produit pour ajouter champs id_stripe-->
    <record id="mcm_product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='id_edof']" position="after">

                <field name="id_stripe"/>
            </xpath>
        </field>
    </record>
</odoo>