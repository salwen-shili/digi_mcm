<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    inherit la vue form de la session pour ajouter le bloc des données sur la ville-->
    <record id="inherit_digimoov_session_form" model="ir.ui.view">
        <field name="name">digimoov.session.form</field>
        <field name="model">mcmacademy.session</field>
        <field name="inherit_id" ref="mcm_session.mcmacademy_session_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ville']" position="replace">
                <field name="session_ville_id" domain="[('company_id', '=', company_id)]"
                       options="{'no_create': True, 'no_create_edit':True}"/>
                <field name="session_adresse_examen" string="Adresse"/>
                <field name="phone" string="N° téléphone"/>
                <field name="email"/>
                <field name="lien" widget="url" string="Lien"/>
                <field name="company_id" invisible="True"/>
                <field name="coach_id" invisible="False" readonly="1" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
            </xpath>
            <xpath expr="//group[@name='rapport_jury']" position="inside">
                <field name="heure_jury" string="Heure"/>
                <field name="num_agrement_jury" string="Numéro d'agrément"/>
                <field name="state" string="Région"/>
                <field name="zoom_link" widget="url" string="Lien ZOOM"><span class="fa-chain"/></field>

            </xpath>
        </field>
    </record>
</odoo>