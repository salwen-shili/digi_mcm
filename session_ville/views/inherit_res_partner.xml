<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    inherit la vue form de client pour ajouter la liste des villes
    avec une condition de visibilitÃ© selon la socitÃ©-->
    <record id="inherit_view_res_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="mcm_cpf_partner.mcmacademy_cpf_view_res_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ville']" position="replace">
                <field name="session_ville_id"
                       attrs="{'invisible': [('mode_de_financement', '!=', 'cpf'),('company_id', '!=', 2)]}" options="{'no_create': True, 'no_create_edit':True}"/>
            </xpath>

        </field>
    </record>

    <!-- Inherit Form View from res.partner-->
    <record id="mcmacademy_partner_department__view_res_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="mcm_session.mcmacademy_view_res_partner_form_3"/>
        <field name="arch" type="xml">
            <xpath expr="//group//div[@class='row form-panel']//div[1]//div[3]//div[5]" position="after">
                <div class="col-sm-12">
                    <div>
                        <label for="country_of_birth_id" string="Pays de naissance :"/>
                        <field name="country_of_birth_id"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
