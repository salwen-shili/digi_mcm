<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mcmacademy_view_product_template_form" model="ir.ui.view">
        <field name="name">product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='pricing']" position="after">
                <label for="prix_chpf"/>
                <div name="prix_chpf">
                    <field name="prix_chpf" class="oe_inline" widget="monetary"
                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                </div>
                <label for="department"/>
                <div name="department">
                    <field name="department" class="oe_inline"/>
                </div>
                <label for="instalment_number" groups="account.group_account_manager"/>
                <div name="instalment_number" groups="account.group_account_manager">
                    <field name="instalment_number" class="oe_inline"/> fois
                </div>
            </xpath>
        </field>
    </record>
</odoo>