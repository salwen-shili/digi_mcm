<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- session form view -->
        <record model="ir.ui.view" id="mcmacademy_module_session_form_view">
            <field name="name">module.session.form</field>
            <field name="model">mcmacademy.module</field>
            <field name="arch" type="xml">
                <form string="domaine de formation">
                    <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="name" class="o_task_name text-truncate" placeholder="Nom de module"/>
                        </h1>
                    </div>
                    <div>
                        <group>
                            <group>
                                <field name="session_id"/>
                                <field name="product_id"/>
                                <field name="modalite_pedagogique"/>
                                <!--                                <field name="background_color" widget="color"/>-->
                            </group>
                            <group>
                                <field name="prix_chpf" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="prix_normal" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="contract_price" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="lieu" domain="[('country_id' ,'=', 'France')]" invisible="1"/>
                                <field name="heure_debut_matin" placeholder="e.x. 09:00"/>
                                <field name="heure_fin_matin" placeholder="e.x. 12:30"/>
                                <field name="heure_debut_apres_midi" placeholder="e.x. 13:30"/>
                                <field name="heure_fin_apres_midi" placeholder="e.x. 17:00"/>
                                <field name="company_id" />
                            </group>
                        </group>
                        <group>
                            <field name="date_module" widget="radio"/>
                        </group>
                        <group>
                            <group>
                                <label for="duree" string="Durée"
                                       attrs="{'invisible': [('date_module', '!=', 'interval')]}"/>
                                <div attrs="{'invisible': [('date_module', '!=', 'interval')]}">
                                    <field name="duree" attrs="{'invisible': [('date_module', '!=', 'interval')]}"
                                           class="oe_inline"/>
                                    heures réparties sur
                                    <field name="reparties_sur" class="oe_inline"
                                           attrs="{'invisible': [('date_module', '!=', 'interval')]}"/>
                                    jours
                                </div>

                                <field name="date_debut"
                                       attrs="{'invisible': [('date_module', '!=', 'interval')]}"/>
                                <field name="date_fin" attrs="{'invisible': [('date_module', '!=', 'interval')]}"/>
                                <field name="duree_moyenne" attrs="{'invisible': [('date_module', '!=', 'interval')]}"/>

                                <field name="method_calcul" widget="radio"
                                       attrs="{'invisible': [('date_module', '!=', 'interval')]}"/>
                            </group>

                        </group>
                        <group>
                            <field name="date_debut" attrs="{'invisible': [('date_module', '!=', 'all')]}"/>
                            <field name="date_fin" attrs="{'invisible': [('date_module', '!=', 'all')]}"/>
                        </group>

                        <group>
                            <field name="module_details_ids" widget="many2many" mode="tree,form">
                                <tree string="">
                                    <field name="name"/>
                                    <field name="prix_chpf" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="prix_normal" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="duree"/>
                                </tree>
                            </field>
                        </group>
                    </div>
                </form>
            </field>
        </record>

        <!-- session tree/list view -->
        <record model="ir.ui.view" id="mcmacademy_module_session_tree_view">
            <field name="name">module.session.tree</field>
            <field name="model">mcmacademy.module</field>
            <field name="arch" type="xml">
                <tree string="Type d'action">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="modalite_pedagogique"/>
                    <field name="date_debut"/>
                    <field name="date_fin"/>
                    <field name="display_duration"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>