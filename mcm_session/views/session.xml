<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- session form view -->
        <record model="ir.ui.view" id="mcmacademy_session_form_view">
            <field name="name">session.form</field>
            <field name="model">mcmacademy.session</field>
            <field name="arch" type="xml">
                <form string="Session Form">
                    <style>
                        .modal-lg, .modal-xl {
                        max-width: 97% !important;
                        }

                        .oe_chatter {
                        display: block !important;
                        }
                    </style>
                    <header>
                        <field name="stage_id" widget="statusbar" clickable="True"/>
                    </header>
                    <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="name" class="o_task_name text-truncate" placeholder="Nom de session"/>
                        </h1>
                    </div>
                    <div>
                        <group>
                            <group name="general">
                                <field name="type_client"/>
                                <field name="sous_traitance"/>
                                <field name="action_type_id"/>
                                <field name="diplome_vise"/>
                            </group>
                            <group name="dates">
                                <field name="domaine_formation"/>
                                <field name="date_debut"/>
                                <field name="date_fin"/>
                                <field name="company_id"/>
                            </group>
                            <group name="rapport_jury" string="Rapport jury">
                                <field name="ville_jury_id"/>
                                <field name="adresse_jury_id"/>
                                <field name="date_jury"/>
                            </group>
                        </group>
                        <group string="Liste des modules">
                            <field name="module_ids" string="" mode="kanban" edit="True" delete="True"
                                   context="{'default_session_id': active_id}">
                                <kanban>
                                    <field name="name"/>
                                    <field name="product_id"/>
                                    <field name="date_debut"/>
                                    <field name="date_fin"/>
                                    <field name="display_duration"/>
                                    <field name="prix_chpf" invisible="1"/>
                                    <field name="prix_normal"/>
                                    <field name="duree"/>
                                    <field name="color"/>
                                    <field name="date_module"/>
                                    <field name="sequence" widget="handle"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_content oe_kanban_global_click"
                                                 style="width:35%">
                                                <div class="o_dropdown_kanban dropdown">
                                                    <a role="button" class="dropdown-toggle o-no-caret btn"
                                                       data-toggle="dropdown"
                                                       data-display="static" href="#" aria-label="Dropdown menu"
                                                       title="Dropdown menu">
                                                        <span class="fa fa-ellipsis-v"/>
                                                    </a>
                                                    <div class="dropdown-menu" role="menu">
                                                        <a role="menuitem" type="edit"
                                                           class="dropdown-item">
                                                            Modifier le module
                                                        </a>
                                                        <a role="menuitem" type="delete"
                                                           class="dropdown-item">
                                                            supprimer le module
                                                        </a>
                                                    </div>
                                                </div>
                                                <div class="oe_kanban_details row">
                                                    <table border="2" style="border-color: black; margin-left: 15px;"
                                                           class="oe_kanban_details col-11">
                                                        <tr>
                                                            <th rowspan="3"
                                                                style="background:#CCC; padding: 8px; width:100px;max-width:100px;">
                                                                <field name="modalite_pedagogique"
                                                                       style="writing-mode: vertical-rl;text-orientation: upright;"/>
                                                            </th>
                                                            <th colspan="3"
                                                                style="background:#E8E8E8;text-align: center;">
                                                                <strong class="o_kanban_record_title"
                                                                        style="font-weight: bold; color: #3498DB; font-size: 1.2em;text-align: center;">
                                                                    <field name="name"/>
                                                                </strong>
                                                            </th>
                                                        </tr>
                                                        <tr rowspan="3">
                                                            <td style="background:whitesmoke">
                                                                <table>
                                                                    <tr>
                                                                        <!--                                                                        <th t-if="record.prix_chpf"-->
                                                                        <!--                                                                            style="font-weight: bold;padding: 8px;">-->
                                                                        <!--                                                                            Prix CHPF-->
                                                                        <!--                                                                        </th>-->
                                                                        <th t-if="record.prix_normal"
                                                                            style="font-weight: bold;padding: 8px;">
                                                                            Prix Personnel
                                                                        </th>
                                                                    </tr>
                                                                    <tr>
                                                                        <!--                                                                        <td t-if="record.prix_chpf"-->
                                                                        <!--                                                                            style="padding: 8px;">-->
                                                                        <!--                                                                            <field t-if="record.prix_chpf"-->
                                                                        <!--                                                                                   name="prix_chpf"-->
                                                                        <!--                                                                                   widget="monetary"/>€-->
                                                                        <!--                                                                        </td>-->
                                                                        <td t-if="record.prix_normal"
                                                                            style="padding: 8px;">
                                                                            <field t-if="record.prix_normal"
                                                                                   name="prix_normal"
                                                                                   widget="monetary"/>€
                                                                        </td>
                                                                    </tr>
                                                                </table>
                                                                <div style="font-weight: bold;">
                                                                    <i class="fa fa-calendar" style="padding: 8px;"/>
                                                                    <field t-if="record.date_debut" name="date_debut"
                                                                           style="padding: 8px;"/>
                                                                    au
                                                                    <field t-if="record.date_fin" name="date_fin"
                                                                           style="padding: 8px;"/>
                                                                    <p style="font-weight: bold;padding: 8px;"
                                                                       t-if="record.date_module = 'all' ">(sur un
                                                                        intervalle de dates non précisées)
                                                                    </p>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                    <!--                                                    <div class="o_kanban_record_top">-->
                                                    <!--                                                        <div class="o_kanban_record_headings">-->
                                                    <!--                                                            <strong class="o_kanban_record_title"-->
                                                    <!--                                                                    style="font-weight: bold; color: #3498DB;">-->
                                                    <!--                                                                <field name="name"/>-->
                                                    <!--                                                            </strong>-->
                                                    <!--                                                        </div>-->
                                                    <!--                                                    </div>-->
                                                    <!--                                                    <table>-->
                                                    <!--                                                        <tr>-->
                                                    <!--                                                            <th t-if="record.prix_entreprise" style="font-weight: bold;">-->
                                                    <!--                                                                Prix Entreprise-->
                                                    <!--                                                            </th>-->
                                                    <!--                                                            <th t-if="record.prix_particulier" style="font-weight: bold;">-->
                                                    <!--                                                                Prix Particulier-->
                                                    <!--                                                            </th>-->
                                                    <!--                                                            <th t-if="record.prix_independant" style="font-weight: bold;">-->
                                                    <!--                                                                Prix Indépendant-->
                                                    <!--                                                            </th>-->
                                                    <!--                                                        </tr>-->
                                                    <!--                                                        <tr>-->
                                                    <!--                                                            <td><field t-if="record.prix_entreprise"-->
                                                    <!--                                                                   name="prix_entreprise" widget="monetary"/></td>-->
                                                    <!--                                                            <td><field t-if="record.prix_particulier"-->
                                                    <!--                                                                   name="prix_particulier" widget="monetary"/></td>-->
                                                    <!--                                                            <td><field t-if="record.prix_independant"-->
                                                    <!--                                                                   name="prix_independant" widget="monetary"/></td>-->
                                                    <!--                                                        </tr>-->
                                                    <!--                                                    </table>-->

                                                    <!--                                                    <div style="font-weight: bold;">-->
                                                    <!--                                                        <field t-if="record.date_debut" name="date_debut"/>-->
                                                    <!--                                                        au-->
                                                    <!--                                                        <field t-if="record.date_fin" name="date_fin"/>-->
                                                    <!--                                                    </div>-->
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </group>
                        <group string="Clients/Stagiaires">
                            <div style="font-weight: bold;">
                                <field name="count_client"/>
                                Clients,
                                <field name="count_stagiaires"/>
                                stagiaires
                            </div>
                        </group>
                        <div class="row">
                            <div class="col-2">
                            </div>
                            <div class="col-8">

                                <field name="client_ids" string="" mode="tree,kanban"
                                       domain="['|',('statut', '=', 'won'),('statut', '=', 'finalized')]">
                                    <tree>
                                        <control>
                                            <create name="add_line_control" string="Ajouter un stagiaire"/>
                                        </control>
                                        <field name="name"/>
                                        <field name="statut"/>
                                        <field name="module_id"/>
                                        <field name="state_id" string="Département"/>
                                    </tree>
                                </field>
                            </div>
                            <div class="col-2">
                            </div>
                        </div>
                        <group string="Prospects indécis" groups="base.group_user">
                            <div style="font-weight: bold;">
                                <field name="count_prospect"/>
                                Prospects
                            </div>
                        </group>
                        <div class="row">
                            <div class="col-2">
                            </div>
                            <div class="col-8">
                                <field name="prospect_ids" string="" mode="tree,kanban"
                                       domain="[('statut', '=', 'indecis')]">
                                    <tree>
                                        <control>
                                            <create name="add_line_control" string="Ajouter un prospect"/>
                                        </control>
                                        <field name="name"/>
                                        <field name="statut"/>
                                        <field name="module_id"/>
                                        <field name="state_id" string="Département"/>
                                    </tree>
                                </field>
                            </div>
                            <div class="col-2">
                            </div>
                        </div>

                        <group string="Perdus ou annulés">
                            <div style="font-weight: bold;">
                                <field name="count_perdu"/>
                                Perdu,
                                <field name="count_annule"/>
                                Annulé
                            </div>
                        </group>
                        <div class="row">
                            <div class="col-2">
                            </div>
                            <div class="col-8">
                                <field name="canceled_prospect_ids" string="" mode="tree,kanban"
                                       domain="['|',('statut', '=', 'perdu'),('statut', '=', 'finalized')]">
                                    <tree>
                                        <control>
                                            <create name="add_line_control" string="Ajouter un prospect annule"/>
                                        </control>
                                        <field name="name"/>
                                        <field name="statut"/>
                                        <field name="module_id"/>
                                        <field name="state_id" string="Département"/>
                                    </tree>
                                </field>
                            </div>
                            <div class="col-2">
                            </div>
                        </div>
                        <group string="Panier Perdu">
                            <div style="font-weight: bold;">
                                <field name="count_panier_perdu"/>
                                Panier perdu
                            </div>
                        </group>
                        <div class="row">
                            <div class="col-2">
                            </div>
                            <div class="col-8">
                                <field name="panier_perdu_ids" string="" mode="tree,kanban"
                                       domain="[('statut', '=', 'panier_perdu')]">
                                    <tree>
                                        <control>
                                            <create name="add_line_control" string="Ajouter un client perdu"/>
                                        </control>
                                        <field name="name"/>
                                        <field name="statut"/>
                                        <field name="module_id"/>
                                        <field name="state_id" string="Département"/>
                                    </tree>
                                </field>
                            </div>
                            <div class="col-2">
                            </div>
                        </div>
                    </div>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- session tree/list view -->
        <record model="ir.ui.view" id="mcmacademy_session_tree_view">
            <field name="name">session.tree</field>
            <field name="model">mcmacademy.session</field>
            <field name="arch" type="xml">
                <tree string="Session Tree">
                    <field name="name"/>
                    <field name="type_client"/>
                    <field name="diplome_vise"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_mcmacademy_session_kanban">
            <field name="name">mcm academy session kanban</field>
            <field name="model">mcmacademy.session</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column o_kanban_project_tasks" archivable="false" on_create="quick_create"
                        default_group_by="stage_id">
                    <field name="color"/>
                    <field name="stage_id"/>
                    <field name="name"/>
                    <field name="type_client"/>
                    <field name="sous_traitance"/>
                    <field name="action_type_id"/>
                    <field name="domaine_formation"/>
                    <field name="diplome_vise"/>
                    <templates style="background:red">
                        <t t-name="kanban-box" style="background:red">
                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_content oe_kanban_global_click">
                                <div class="o_dropdown_kanban dropdown" t-if="!selection_mode" groups="base.group_user">
                                    <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown"
                                       data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">
                                            Modifier la session
                                        </a>
                                        <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">
                                            supprimer
                                        </a>
                                        <div role="separator" class="dropdown-divider"></div>
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"
                                                style="font-weight: bold; color: #3498DB;">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div style="font-weight: bold;">
                                        <field name="date_debut"/>
                                        -
                                        <field name="date_fin"/>
                                    </div>
                                    <div>
                                        <small style="font-weight: bold">
                                            <field name="count"/>
                                            clients
                                        </small>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left o_kanban_record_subtitle text-muted">
                                        <field name="number"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <i class="fa fa-fw o_button_icon fa-users"></i>
                                        <field name="count"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>


