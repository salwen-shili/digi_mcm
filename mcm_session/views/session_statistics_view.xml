<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_session_statistics_form" model="ir.ui.view">
            <field name="name">session.statistics.form</field>
            <field name="model">session.statistics</field>
            <field name="arch" type="xml">
                <form string="Statestiques">
                    <sheet>
                        <group col="4">
                            <field name="session_id" options="{'no_create': True}"/>
                            <field name="date_exam"/>
                            <field name="company_id" options="{'no_create': True}"/>
                            <field name="nbr_inscrits"/>
                            <field name="nbr_pack_solo_inscrits"/>
                            <field name="nbr_pack_pro_inscrit"/>
                            <field name="nbr_pack_premium_inscrit"/>
                            <field name="nbr_pack_repassage_inscrit"/>
                            <field name="nbr_present"/>
                            <field name="nbr_pack_solo_present"/>
                            <field name="nbr_pack_pro_present"/>
                            <field name="nbr_pack_premium_present"/>
                            <field name="nbr_pack_repassage_present"/>
                            <field name="nbr_absence_justifiee"/>
                            <field name="nbr_echec"/>
<!--                            <field name="taux_echec"/>-->
                        </group>
                    </sheet>
                    <!--<div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>-->
                </form>
            </field>
        </record>

        <record id="view_session_statistics_tree" model="ir.ui.view">
            <field name="name">session.statistics.tree</field>
            <field name="model">session.statistics</field>
            <field name="arch" type="xml">
                <tree string="session_statistics_tree">
                    <field name="session_id"/>
                    <field name="date_exam"/>
                    <field name="company_id" optional="show"/>
                    <field name="nbr_inscrits"/>
                    <field name="nbr_pack_solo_inscrits"/>
                    <field name="nbr_pack_pro_inscrit"/>
                    <field name="nbr_pack_premium_inscrit"/>
                    <field name="nbr_pack_repassage_inscrit"/>
                    <field name="nbr_present"/>
                    <field name="nbr_pack_solo_present"/>
                    <field name="nbr_pack_pro_present"/>
                    <field name="nbr_pack_premium_present"/>
                    <field name="nbr_pack_repassage_present"/>
                    <field name="nbr_absence_justifiee"/>
                    <field name="nbr_echec"/>
                </tree>
            </field>
        </record>

        <record id="view_session_statistics_filter" model="ir.ui.view">
            <field name="name">session.statistics.search</field>
            <field name="model">session.statistics</field>
            <field name="arch" type="xml">
                <search string="session_statistics_search">
                    <field name="session_id" string="Session"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Session" name="session_id" context="{'group_by':'session_id'}"/>
                        <filter string="Société" name="company" context="{'group_by':'company_id'}"/>
                        <filter string="Date de création" name="create_date" context="{'group_by':'create_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="session_statistics_view_kanban" model="ir.ui.view">
            <field name="name">session.statistics.kanban</field>
            <field name="model">session.statistics</field>
            <field name="arch" type="xml">
                <kanban create="false" default_order="date_exam">
                    <field name="session_id"/>
                    <field name="date_exam"/>
                    <field name="nbr_inscrits"/>
                    <field name="nbr_present"/>
                    <field name="nbr_absence_justifiee"/>
                    <field name="nbr_echec"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''}">
                                    <div t-attf-class="o_kanban_card_header">
                                        <div class="o_kanban_card_header_title">
                                            <div class="o_primary">
                                                <field name="session_id"/>
                                            </div>
                                            <div class="o_secondary">
                                                <field name="company_id"/>
                                                <field name="nbr_inscrits" widget="maximum_rate"/>
                                            </div>
                                        </div>
                                        <div class="o_kanban_manage_button_section" t-if="!selection_mode">
                                            <a class="o_kanban_manage_toggle_button" href="#">
                                                <i class="fa fa-ellipsis-v" role="img" aria-label="Manage"
                                                   title="Manage"/>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="container o_kanban_card_content" t-if="!selection_mode">
                                        <div class="row">
                                            <div class="col-6 o_kanban_primary_right">
                                            </div>
                                        </div>
                                    </div>
                                    <!--                                <div class="container o_kanban_card_manage_pane dropdown-menu" role="menu">-->
                                    <!--                                    <div t-if="widget.editable" class="o_kanban_card_manage_settings row">-->
                                    <!--                                        <div role="menuitem" aria-haspopup="true" class="col-8">-->
                                    <!--                                            <ul class="oe_kanban_colorpicker" data-field="color" role="menu"/>-->
                                    <!--                                        </div>-->
                                    <!--                                        <div class="col-4 text-right">-->
                                    <!--                                            <a role="menuitem" type="edit">Settings</a>-->
                                    <!--                                        </div>-->
                                    <!--                                    </div>-->
                                    <!--                                </div>-->
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_session_statistics" model="ir.actions.act_window">
            <field name="name">Statestiques des sessions</field>
            <field name="res_model">session.statistics</field>
            <field name="view_mode">tree,graph,form,pivot</field>
            <!--            <field name="search_view_id" ref="view_department_filter"/>-->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouvelle statestique session
                </p>
                <p>
                    La structure Session Statestics est utilisée pour gérer toutes les analyses liées à IONE par
                    l'entreprise.
                </p>
            </field>
        </record>

        <menuitem id="statistics_session_menu" name="Statestiques"
                  parent="mcm_academy_session_root_menu"
                  action="action_session_statistics"
                  sequence="41"
                  groups="mcm_session.group_session_module_manager"/>
    </data>
</odoo>
