<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mcmacademy_session_view_sale_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="session_id" string="Session"/>
                <field name="module_id"
                       domain="[('session_id', '=', session_id)]"/>
                <field name="id_edof" attrs="{'invisible': [('id_edof', '=',False)]}"/>
            </xpath>
            <xpath expr="//header//button[@name='action_draft']" position="after">
                <button name="action_link_contract" type="object" string="Lier contrats avec modules"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="conditions" string="Conditions de paiement"/>
                <field name="conditionsResteChargeLourd" string="Condition de paiement reste à charge (Lourd) " />
                <field name="failures" string="Renonce de droit de rétractation"/>
            </xpath>
        </field>
    </record>
</odoo>