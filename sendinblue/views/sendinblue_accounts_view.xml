<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sendinblue_accounts_form" model="ir.ui.view">
            <field name="name">sendinblue.accounts.form</field>
            <field name="model">sendinblue.accounts</field>
            <field name="arch" type="xml">
                <form string="sendinblue Accounts">
                    <header>
                        <button name="test_connection" string="Test Connection"
                                type="object" class="btn-success"/>
                        <button name="fetch_merge_fields" string="Fetch Merge Fields" type="object" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object"
                                    class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                       options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Account Name"/>
                            <h1>
                                <field name="name" placeholder="Account Name"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Authentication">
                                <field name="api_key"/>
                            </group>
                        </group>
                        <group string='sendinblue Tutorial'
                               attrs="{'invisible': [('api_key', '!=', False)]}">
                            <ul>
                                <li>
                                    <b>
                                        Go to
                                        <a href='https://account.sendinblue.com/advanced/api' target='_blank'>sendinblue
                                            Website
                                        </a>
                                        to create or retrive API Key
                                    </b>
                                </li>
                            </ul>
                        </group>
                        <notebook>
                            <page string="Folders">
                                <field name="folder_ids">
                                    <tree string="SendinBlue Folders" create="false">
                                        <field name="sendinblue_id" invisible="1"/>
                                        <field name="name"/>
                                        <field name="totalsubscribers"/>
                                        <field name="totalblacklisted"/>
                                        <field name="uniquesubscribers"/>
                                        <button name="refresh_folder" attrs="{'invisible': [('sendinblue_id','=', False)]}"
                                                string="Refresh" type="object" icon="fa-refresh"/>
                                    </tree>
                                </field>
<!--                                <field name="folder_ids" create="false"/>-->
                            </page>
                            <page name="lists" string="Lists">
                                <field name="list_ids" nolabel="1">
                                    <tree string="sendinblue Lists/Audiences" create="false">
                                        <field name="name"/>
                                        <field name="date_created"/>
                                        <field name="list_id"/>
                                        <field name="totalsubscribers"/>
                                        <!--<button name="export_in_sendinblue" attrs="{'invisible': [('list_id','!=', False)]}" string="Export In sendinblue" type="object" icon="fa-external-link"/>-->
                                        <!--<button name="update_in_sendinblue" attrs="{'invisible': [('list_id','=', False)]}" string="Update In sendinblue" type="object" icon="fa-share-square-o"/>-->
                                        <button name="refresh_list" attrs="{'invisible': [('list_id','=', False)]}"
                                                string="Refresh" type="object" icon="fa-refresh"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="campaign" string="Campaigns">
                                <field name="campaign_ids" nolabel="1" readonly="1"/>
                            </page>
                            <page string="Merge Fields" name="merge_fields">
                                <div class="alert alert-info info_icon" role="alert">
                                    <span class="fa fa-lightbulb-o fa-lg">
                                        <strong>Notes</strong>
                                    </span>
                                    <p>
                                        <br/>
                                        1. Make sure you have selected res.partner field(Odoo Field).
                                        <br/>
                                        2. You don't need to select Odoo Field for FIRSTNAME and LASTNAME name because
                                        it will get selected automatically at the time of exporting contact or updating
                                        contact.
                                    </p>
                                </div>
                                <field name="merge_field_ids" nolabel='1'>
                                    <tree editable="top" delete="false" create="false">
                                        <field name="name" readonly="1"/>
                                        <field name="type" readonly="1"/>
                                        <field name="category" readonly="1"/>
                                        <field name="field_id" domain="[('ttype', 'in', ['char','integer','date','datetime','boolean','text'])]"
                                               attrs="{'readonly': ['|', ('category','!=', 'normal'),('name','in', ['FIRSTNAME','LASTNAME'])]}"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="settings" string="Settings">
                                <h2>Member Options</h2>
                                <div class="row mt16 o_settings_container" id="member_option">
                                    <div class="col-lg-6 o_setting_box">
                                        <div class="o_setting_left_pane">
                                            <field name="auto_create_member"/>
                                        </div>
                                        <div class="o_setting_right_pane">
                                            <label for="auto_create_member" string="Auto Create Member In Odoo?"/>
                                            <div class="text-muted">
                                                While syncing member lists would you like to create new mailling contact
                                                in Odoo if not found in Odoo?
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 o_setting_box">
                                        <div class="o_setting_left_pane">
                                            <field name="auto_refresh_member"/>
                                        </div>
                                        <div class="o_setting_right_pane">
                                            <label for="auto_refresh_member"/>
                                            <div class="text-muted">
                                                Auto Import/Update member in Odoo at defined in scheduled action.
                                            </div>
                                            <div attrs="{'invisible': [('auto_refresh_member','=',False)]}"
                                                 class="mt16">
                                                <p attrs="{'invisible': [('auto_refresh_member', '=', False)]}">
                                                    <button icon="fa-arrow-right"
                                                            type="object"
                                                            name="get_refresh_member_action"
                                                            string="Scheduled Actions" class="btn-link"/>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 o_setting_box"
                                         attrs="{'invisible': [('auto_create_member', '=', False)]}">
                                        <div class="o_setting_left_pane">
                                            <field name="auto_create_partner"/>
                                        </div>
                                        <div class="o_setting_right_pane">
                                            <label for="auto_create_partner" string="Auto Create Customers In Odoo?"/>
                                            <div class="text-muted">
                                                While syncing member lists would you like to create new Customers(Odoo
                                                Contacts)
                                                in Odoo if not found in Odoo?
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_sendinblue_accounts_tree" model="ir.ui.view">
            <field name="name">sendinblue.accounts.tree</field>
            <field name="model">sendinblue.accounts</field>
            <field name="arch" type="xml">
                <tree string="sendinblue Account">
                    <field name="name"/>
                    <field name="api_key"/>
                </tree>
            </field>
        </record>

        <record id="action_sendinblue_accounts" model="ir.actions.act_window">
            <field name="name">Sendinblue Accounts</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sendinblue.accounts</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
            <field name="context"></field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new sendinblue Account.
                </p>
                <p>
                    Accounts allows you to manage the all sendinblue operation from here.
                </p>
            </field>
        </record>

        <menuitem id="menu_sendinblue_root" name="SendinBlue" parent="mass_mailing.mass_mailing_menu_root"
                  sequence="3" web_icon="sendinblue,static/description/icon.png"
                  groups="mass_mailing.group_mass_mailing_user"/>

        <menuitem name="Accounts" parent="menu_sendinblue_root"
                  action="action_sendinblue_accounts" id="menu_action_sendinblue_accounts"
                  sequence="10"/>
    </data>
</odoo>