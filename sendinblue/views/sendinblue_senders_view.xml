<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sendinblue_senders_form" model="ir.ui.view">
            <field name="name">SendinBlue.senders.form</field>
            <field name="model">sendinblue.senders</field>
            <field name="arch" type="xml">
                <form string="SendinBlue Senders">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Senders Name"/>
                            <h1>
                                <field name="name" required="1" placeholder="Senders Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="email" required="1"/>
                                <field name="account_id" required="1"/>
                            </group>
                            <group>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_sendinblue_senders_tree" model="ir.ui.view">
            <field name="name">sendinblue.senders.tree</field>
            <field name="model">sendinblue.senders</field>
            <field name="arch" type="xml">
                <tree string="sendinblue Senders">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="action_sendinblue_senders" model="ir.actions.act_window">
            <field name="name">SendinBlue Senders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sendinblue.senders</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
            <field name="context"></field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Import Senders from SendinBlue or Create new senders for SendinBlue.
                </p>
            </field>
        </record>

        <menuitem name="Senders" parent="menu_sendinblue_root"
                  action="action_sendinblue_senders" id="menu_action_sendinblue_senders"
                  sequence="31"/>

        <record model="ir.actions.server" id="action_export_senders_sendinblue">
            <field name="name">Export and Update(SendINBlue)</field>
            <field name="model_id" ref="model_sendinblue_senders"/>
            <field name="binding_model_id" ref="model_sendinblue_senders" />
            <field name="state">code</field>
            <field name="code">
                if records:
                    action = records.action_export_senders_sendinblue()
            </field>
        </record>
    </data>
</odoo>