<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_sendinblue_form" model="ir.ui.view">
        <field name="name">res.partner.sendinblue.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook[last()]" position="inside">
                <page string="SendinBlue List" name="sendinblue_list">
                    <field name="subscription_list_ids" domain="[('sendinblue_list_id','!=',False)]" readonly="True">
                        <tree>
                            <field name="list_id"/>
                            <field name="opt_out"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
