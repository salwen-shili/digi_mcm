<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="wizard_form_view">
        <field name="name">wizard.form</field>
        <field name="model">sendinblue.sendinbluesms</field>
        <field name="arch" type="xml">
            <form string="Envoyer un SMS" modifiers="{}">
                <sheet modifiers="{}">
                    <group modifiers="{}">
                          <field name="sender"/>
                         <field name="current_user"/>
                        <field name="recipient"
                        />
                        <div colspan="2" role="alert">
                            <p class="my-0" modifiers="{}">
                                <field name="content" widget="sms_widget"/>
                            </p>
                        </div>
                    </group>
                </sheet>
                <footer>
                    <button string="Envoi de SMS" type="object" name="sendsms"/>
                </footer>
            </form>
        </field>
    </record>
    <act_window name="Send SMS Via Sendinblue"
                res_model="sendinblue.sendinbluesms"
                binding_model="res.partner"
                view_mode="form"
                binding_views="form"
                target="new"
                id="sendinblue_sms-form"
    />
    <act_window name="Send SMS Via Sendinblue"
                res_model="sendinblue.sendinbluesms"
                binding_model="res.partner"
                view_mode="form"
                binding_views="list"
                target="new"
                id="sendinblue_sms-formn_list"
    />


</odoo>
