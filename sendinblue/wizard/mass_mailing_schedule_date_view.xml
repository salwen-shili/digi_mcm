<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mass_mailing_schedule_date_view_form" model="ir.ui.view">
            <field name="name">mass.mailing.schedule.date.form</field>
            <field name="model">mass.mailing.schedule.date</field>
            <field name="inherit_id" ref="mass_mailing.mass_mailing_schedule_date_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//footer" position="before">
                    <p class="oe_grey">
                        If you are using sendinblue Campaigns then Campaigns may only be scheduled to send on the
                        quarter-hour (:00, :15, :30, :45)
                    </p>
                </xpath>
            </field>
        </record>
    </data>
</odoo>