<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sh_website_preloader_res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">sh.inherit.res.config.settings.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="website.res_config_settings_view_form"/>
            <field name="arch" type="xml">                
                  <xpath expr="//div[@id='website_settings']" position="after">
						<script type="text/javascript" src="/sh_corpomate_theme/static/src/js/jscolor.js"></script>
                     <h2>Website Preloader</h2>
                      <div class="row mt16 o_settings_container" id="sh_cookie_notice_settings">
                          <div class="col-12 col-md-6 o_setting_box">                     
                              
			          	        <group name="cookie_notice">
				        	        <field name="sh_is_website_preloader"/>
				                    <field name="sh_back_color" class="jscolor" attrs="{'invisible': [('sh_is_website_preloader','=',False)],'required': [('sh_is_website_preloader', '=', True)] }"/>
				                    <field name="sh_progressbar_color" class="jscolor"  attrs="{'invisible': [('sh_is_website_preloader','=',False)],'required': [('sh_is_website_preloader', '=', True)] }"/>
				                    <field name="sh_style" widget="selection" attrs="{'invisible': [('sh_is_website_preloader','=',False)],'required': [('sh_is_website_preloader', '=', True)] }"/>
			                    </group>			                         
                                                       
                          </div>
                      </div>
        
                  </xpath>
              
                       
            </field>
        </record>

		<template id="sh_website_preloader" inherit_id="website.assets_frontend" name="Website Preloader Assets">
    	      <xpath expr="script[last()]" position="after">
			  	<script type="text/javascript" src="/sh_corpomate_theme/extra_addons/sh_website_preloader/static/src/js/preloader.js"/>
		      </xpath>
 			  <xpath expr="link[last()]" position="after">   
				<link rel="stylesheet" type="text/css" href="/sh_corpomate_theme/extra_addons/sh_website_preloader/static/src/css/preloader.css" />
	   		  </xpath>
		</template>

		<template inherit_id="portal.frontend_layout" id="sh_website_preloade_template" name="Main layout">  
		    <xpath expr="//div[@id='wrapwrap']" position="before">  
		        
				<div id="preloader" t-attf-style="background:##{website.sh_back_color}" t-if="website.sh_is_website_preloader">
  					<div id="status">
  						<div class="loader">
  						
  						<t t-esc="loader_class"/>
         					<div id ="preload_class" t-attf-class="#{website.sh_style} loader-inner">
         						<div t-attf-style="background:##{website.sh_progressbar_color}"></div>
        					</div>
		      			</div>
	      			</div>
				</div>		
				        
			</xpath>			
		</template>
					
    </data>
</odoo>
