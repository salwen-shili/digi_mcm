<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="colorpicker" inherit_id="web_editor.colorpicker">
        
        
        <xpath expr="//colorpicker" position="inside">
    
            <h6 class="sh-custom-color mt8" style="background-color: var(--o-we-bg-color-dark);color: var(--o-we-color);padding: 0.25rem 0.5rem;cursor:pointer;">
                <i class="fa fa-plus"></i> Add Custom Color
            </h6>
            
   			<div class="sh-custom-color-palette o_colorpicker_section" data-name="sh-custom-color-palette" data-display="Custom Color"/>            
            
        </xpath>
    </template>
    
    
 
