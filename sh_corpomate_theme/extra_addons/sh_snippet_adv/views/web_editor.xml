	<!-- options (data-selector, data-drop-in, data-drop-near, data-js to link js object ) -->
	<template id="snippet_options" inherit_id="web_editor.snippet_options">
	
		<xpath expr="." position="inside">
		
    
    <!-- Styles  
    
    <div data-selector="section .row > div"
        data-exclude=".s_col_no_bgcolor, .s_col_no_bgcolor.row > div, .o_gallery .row > div">
            
    
    <div  data-selector="section, .parallax, :not(.o_gallery > .container) > .carousel, .note-editable > div:not(.o_layout), .note-editable .oe_structure > div, td, th">
        <we-collapse-area>
            <we-toggler><i class="fa fa-fw fa-magic"/> Styles (All Element)</we-toggler>
            <we-collapse>
                <we-button data-toggle-class="border">Border</we-button>
                <we-button data-toggle-class="rounded">Rounded</we-button>
                <we-button data-toggle-class="shadow">Shadow</we-button>
            </we-collapse>
        </we-collapse-area>
    </div>
    -->   
    
    	
    <!-- Box Shadow -->    	
    <div data-selector="section .row > div,.note-editable > div:not(.o_layout),.note-editable .oe_structure > div, td, th">
        <we-collapse-area>
            <we-toggler> Box Shadow</we-toggler>
            <we-collapse>
                <we-button data-select-class="">None</we-button>
                <we-button data-select-class="sh_snippet_adv_shadow_1">Shadow 1</we-button>
                <we-button data-select-class="sh_snippet_adv_shadow_2">Shadow 2</we-button>
                <we-button data-select-class="sh_snippet_adv_shadow_3">Shadow 3</we-button>
                <we-button data-select-class="sh_snippet_adv_shadow_4">Shadow 4</we-button>
                <we-button data-select-class="sh_snippet_adv_shadow_5">Shadow 5</we-button>                                
            </we-collapse>
        </we-collapse-area>
    </div>    	
    	



    <!-- Box Shadow Hover -->    	
    <div data-selector="section .row > div,.note-editable > div:not(.o_layout),.note-editable .oe_structure > div, td, th">
        <we-collapse-area>
            <we-toggler> Box Shadow Hover</we-toggler>
            <we-collapse>
                <we-button data-select-class="">None</we-button>
                <we-button data-select-class="sh_snippet_adv_shadow_hover_1">Shadow Hover 1</we-button>
                <we-button data-select-class="sh_snippet_adv_shadow_hover_2">Shadow Hover 2</we-button>
                <we-button data-select-class="sh_snippet_adv_shadow_hover_3">Shadow Hover 3</we-button>
                <we-button data-select-class="sh_snippet_adv_shadow_hover_4">Shadow Hover 4</we-button>
                <we-button data-select-class="sh_snippet_adv_shadow_hover_5">Shadow Hover 5</we-button>                                
            </we-collapse>
        </we-collapse-area>
    </div>   


    	
    	
    	
    <!-- Border -->
    <div data-js="shborderstyle"
    	data-selector="section .row > div,.note-editable > div:not(.o_layout),.note-editable .oe_structure > div, td, th">
        
        


                
                
        
        
        <!-- Border Style -->
        <we-collapse-area>
            <we-toggler>Border Style</we-toggler>
            <we-collapse>
            
                <we-button data-border_style="none">None</we-button>
                <we-button data-border_style="hidden">Hidden</we-button> 
                <we-button data-border_style="dotted">Dotted</we-button>
                <we-button data-border_style="dashed">Dashed</we-button>
                <we-button data-border_style="solid">Solid</we-button>
                <we-button data-border_style="double">Double</we-button>                
                <we-button data-border_style="groove">Groove</we-button>    
                <we-button data-border_style="ridge">Ridge</we-button> 
                <we-button data-border_style="inset">Inset</we-button> 
                <we-button data-border_style="dotted solid double dashed">Dotted solid double dashed</we-button> 
                <we-button data-border_style="dotted solid">Dotted solid</we-button> 
                <we-button data-border_style="initial">Initial</we-button> 
                                                                                                
                                
            </we-collapse>
        </we-collapse-area>
        

       <!-- Border Width -->
        <we-collapse-area>
            <we-toggler>Border Width</we-toggler>
            <we-collapse>
            
                <we-button data-border_width="0px">None</we-button>
                
                <we-button data-border_width="1px">1 px</we-button>
                <we-button data-border_width="2px">2 px</we-button>
                <we-button data-border_width="3px">3 px</we-button>
                <we-button data-border_width="4px">4 px</we-button>                
                <we-button data-border_width="5px">5 px</we-button>       
                
                
                                
            </we-collapse>
        </we-collapse-area>
        
        
        


		<!-- Border Color -->
        <we-collapse-area>
           <we-button data-no-preview="true" data-border_color="">Border Color</we-button>            
        </we-collapse-area>
        
        
		<!-- Border Radius -->
        <we-collapse-area>
           <we-button data-no-preview="true" data-border_radius="">Border Radius</we-button>            
        </we-collapse-area>
        
        
        
       <!-- Border Width Custom -->
        <we-collapse-area>
           <we-button data-no-preview="true" data-border_width_custom="">Border Width Custom</we-button>       
        </we-collapse-area>        
        
                
        
        
        
        
       <!-- Border Position
        <we-collapse-area>
            <we-toggler>Border Position</we-toggler>
            <we-collapse>
            
                <we-button data-border_style="">None</we-button>
                
                <we-button data-border_style="dotted">Dotted</we-button>
                <we-button data-border_style="dashed">Dashed</we-button>
                <we-button data-border_style="solid">Solid</we-button>
                <we-button data-border_style="double">Double</we-button>                
                
            </we-collapse>
        </we-collapse-area>
        
         -->
                
        
        
        
    </div>
    
    
    
    
    
    
    
    
    
        
    
    
    
        	
    	
    		
		
		</xpath>

	</template>





</odoo>

