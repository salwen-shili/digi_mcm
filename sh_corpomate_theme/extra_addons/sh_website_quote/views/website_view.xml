<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>    
      <!-- website views -->
      <record id="sh_wq_website_quote_website_form" model="ir.ui.view">
          <field name="name">sh.wq.website.quote.website.form</field>
          <field name="model">website</field>
          <field name="inherit_id" ref="website.view_website_form"/> 
          <field name="arch" type="xml">
          	<xpath expr="//form/sheet" position="inside">   


                       <div class="row mt16 o_settings_container" id="sh_wq_website_quote_settings">
                          <div class="col-12 col-md-6 o_setting_box">
 							<group string="Website Quote" name="sh_wq_website_quote_settings_group">
 							
 								<field name="sh_wq_is_display_quote"/>
 								<field name="sh_wq_quote_button_style" attrs="{'invisible': [('sh_wq_is_display_quote','=',False)],'required': [('sh_wq_is_display_quote', '=', True)] }"/>
 								
 								<!-- rectangle -->
 								<field name="sh_wq_quote_button_label" placeholder="e.g Get a Quote" attrs="{'invisible': ['|',('sh_wq_is_display_quote','=',False),('sh_wq_quote_button_style','==','fball')],'required': [('sh_wq_quote_button_style', '==', 'fbutton')] }"/> 
 								<field name="sh_wq_quote_button_label_color" placeholder="e.g 00AFF0" class="jscolor" attrs="{'invisible': ['|',('sh_wq_is_display_quote','=',False),('sh_wq_quote_button_style','==','fball')],'required': [('sh_wq_quote_button_style', '==', 'fbutton')] }"/> 
 								<field name="sh_wq_quote_button_color" placeholder="e.g 00AFF0" class="jscolor" attrs="{'invisible': ['|',('sh_wq_is_display_quote','=',False),('sh_wq_quote_button_style','==','fball')],'required': [('sh_wq_quote_button_style', '==', 'fbutton')] }"/> 
 								
 								
								<!-- bubble -->
								<field name="sh_wq_quote_bubble_image" widget="image" class="oe_avatar" options="{'preview_image': 'image_medium', 'size': [90, 90]}" attrs="{'invisible': ['|',('sh_wq_is_display_quote','=',False),('sh_wq_quote_button_style','!=','fball')],'required': [('sh_wq_is_display_quote','=',True),('sh_wq_quote_button_style', '==', 'fball')] }"/> 
								
								<!-- 
								<field name="sh_wq_quote_bubble_hover_label" placeholder="e.g Get a Quote" attrs="{'invisible': ['|',('sh_wq_is_display_quote','=',False),('sh_wq_quote_button_style','!=','fball')],'required': [('sh_wq_quote_button_style', '==', 'fball')] }"/> 								
								<field name="sh_wq_quote_bubble_hover_label_color" placeholder="e.g FFFFFF" class="jscolor" attrs="{'invisible': ['|',('sh_wq_is_display_quote','=',False),('sh_wq_quote_button_style','!=','fball')],'required': [('sh_wq_quote_button_style', '==', 'fball')] }"/>
								<field name="sh_wq_quote_bubble_hover_color" placeholder="e.g 000000" class="jscolor" attrs="{'invisible': ['|',('sh_wq_is_display_quote','=',False),('sh_wq_quote_button_style','!=','fball')],'required': [('sh_wq_quote_button_style', '==', 'fball')] }"/>
 								-->
 																								 								
 								<field name="sh_wq_quote_button_position" attrs="{'invisible': [('sh_wq_is_display_quote','=',False)],'required': [('sh_wq_is_display_quote', '=', True)] }"/>	
 								<!-- for fields visibility -->
 								<field name="sh_wq_is_contact_name" attrs="{'invisible': [('sh_wq_is_display_quote','=',False)]}"/>	 								
 								<field name="sh_wq_is_phone" attrs="{'invisible': [('sh_wq_is_display_quote','=',False)]}"/>	
 								<field name="sh_wq_is_email_from" attrs="{'invisible': [('sh_wq_is_display_quote','=',False)]}"/>	
 								<field name="sh_wq_is_partner_name" attrs="{'invisible': [('sh_wq_is_display_quote','=',False)]}"/>	
 								<field name="sh_wq_is_name" attrs="{'invisible': [('sh_wq_is_display_quote','=',False)]}"/>	
 								<field name="sh_wq_is_description" attrs="{'invisible': [('sh_wq_is_display_quote','=',False)]}"/>	 								
 								
							
							</group>
                          </div>    
                       </div>      
                        		
          	</xpath>
          </field>
      </record>
</data>
</odoo>


        