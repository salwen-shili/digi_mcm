<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mcm_view_res_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']" position="before">
                <page string="Session" name="session">
                    <group string="Session" name="session">
                        <group name="mcm_session">
                            <field name="session_id" invisible="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="mcm_view_partner_property_form" model="ir.ui.view">
        <field name="name">res.partner.property.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='acc_number']" position="after">
                <field name="bic"/>
            </xpath>

        </field>
    </record>
</odoo>