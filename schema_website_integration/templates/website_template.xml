<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="schema_web_layout" name="SCHEMA.ORG: Web Layout" inherit_id="web.layout">
        <xpath expr="//head" position="inside">


            <script type="application/ld+json">
                {
                "@context": "https://schema.org/",
                "@type": "WebSite",
                "name": "MCM ACADEMY",
                "url": "https://www.mcm-academy.fr"

                }
            </script>
            <!-- <script t-if="website.id==2" type="application/ld+json">{
                "@context": "http://schema.org",
                "@type": "WebSite",
                "name": "DIGIMOOV",
                "url": "https://www.digimoov.fr",
                }</script> -->
        </xpath>
    </template>
    <template id="mcm_website_blog_post_short" inherit_id="website_blog.blog_post_short">
        <xpath expr="//meta[@name='robots']" position="replace">
            <meta name="robots" content="noindex" t-if="blog"/>
        </xpath>
        <xpath expr="//t[@t-set='opt_blog_cards_design']" position="before">
            <t t-set="head" t-if="not blog">
                <meta name="robots" content="noindex"/>
            </t>
        </xpath>
    </template>
</odoo>