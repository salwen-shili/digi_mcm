<?xml version="1.0" encoding="utf-8"?>
<!-- Heritage du rapport other_info  plus  affichage  session_id , module_id , methodes_payment-->
<odoo>
    <data>
        <record id="session_view_account_move_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_origin']" position="after">
                    <field name="session_id"/>
                    <field name="module_id" domain="[('session_id', '=', session_id)]"/>
                    <field name="methodes_payment" widget="radio" attrs="{'invisible':[('company_id','=',1)]}"/>
                     <field name="numero_cpf"  attrs="{'invisible':[('methodes_payment','=','cartebleu')]}"/>

                </xpath>
            </field>
        </record>
    </data>
</odoo>