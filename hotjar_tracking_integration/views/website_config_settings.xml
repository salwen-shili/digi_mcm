<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_website_config_settings_hotjar_tracking" model="ir.ui.view">
        <field name="name">Hotjar Tracking: Website settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='google_analytics_setting']" position="after">
                <div class="col-12 col-lg-offset-6 col-lg-6 o_setting_box" id="hotjar_tracking_setting">
                    <div class="o_setting_left_pane">
                        <field name="has_hotjar_tracking"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="has_hotjar_tracking"/>
                        <span class="fa fa-lg fa-globe" title="Values set here are website-specific." groups="website.group_multi_website"/>
                        <div class="text-muted">
                            Manage tracking tags in one place
                        </div>
                        <div class="content-group" attrs="{'invisible': [('has_hotjar_tracking', '=', False)]}">
                            <div class="row mt16">
                                <label class="col-lg-3 o_light_label" string="Container ID" for="hotjar_tracking_key"/>
                                <field name="hotjar_tracking_key" placeholder="XXXXXXX"
                                       attrs="{'required': [('has_hotjar_tracking', '=', True)]}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
