<odoo>
    <data>
        <!-- Action -->
        <record id="action_info_examen" model="ir.actions.act_window">
            <field name="name">Examen Informations</field>
            <field name="res_model">info.examen</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first Information</p>
            </field>
        </record>

        <!-- Form View -->
        <record id="notes_des_examens_form" model="ir.ui.view">
            <field name="name">info.examen.form</field>
            <field name="model">info.examen</field>
            <field name="arch" type="xml">
                <form string="Notes des examens Form">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="oe_title">
                            <label for="partner_id" class="oe_edit_only"/>
                            <h1>
                                <field name="partner_id" class="oe_inline"/>
                            </h1>
                            <h2>
                                <field name="phone" widget="phone" options="{'enable_sms': True}" invisible="1"/>
                                <label for="mobile"/>
                                <div class="o_row">
                                    <field name="mobile" widget="phone" options="{'enable_sms': True}"/>
                                </div>
                            </h2>
                        </div>
                        <group>
                            <group name="note_examen" string="Notes QRO/QCM"
                                   attrs="{'invisible': [('company_id', '!=', 2)]}">
                                <field name="active" invisible="1"/>
                                <field name="session_id"/>
                                <field name="module_id"/>
                                <field name="date_exam"/>
                                <field name="epreuve_a"/>
                                <field name="epreuve_b"/>
                                <field name="moyenne_generale" style="background:#FFF0F5;"/>
                                <field name="is_recu" invisible="1"/>
                                <field name="is_ajourne" invisible="1"/>
                                <field name="is_present" invisible="1"/>
                                <field name="is_Absent" invisible="1"/>
                                <field name="is_absence_justifiee" invisible="1"/>
                            </group>
                            <group name="note_exam_mcm" string="Les informations"
                                   attrs="{'invisible': [('company_id', '=', 2)]}">
                                <field name="session_id"/>
                                <field name="module_id"/>
                                <field name="date_exam"/>
                                <field name="epreuve_theorique"/>
                                <field name="epreuve_pratique"/>
                                <field name="date_exam_pratique"/>
                            </group>
                            <group name="statut_mcm" string="Statut" attrs="{'invisible': [('company_id', '=', 2)]}">
                                <field name="presence_mcm"/>
                                <field name="state_theorique"/>
                                <field name="state_pratique"/>
                                <field name="date_resultat_officiel"/>
                                <field name="etat_formation"   attrs="{'invisible': [('company_id', '=', 2)]}"  />
                            </group>
                            <group name="statuts" string="Statut" attrs="{'invisible': [('company_id', '!=', 2)]}">
                                <field name="presence"/>
                                <field name="mention"/>
                                <field name="resultat"/>
                                <field name="etat" invisible="1"/>
                            </group>
                            <group name="stat" string="Statistique" attrs="{'invisible': [('company_id', '!=', 2)]}">
                                <field name="temps_minute" string="Temps passé plateforme"/>
                                <field name="total_time_visio_hour" string="Temps passé Visio"/>
                                <field name="total_time_appels_hour" string="Temps passé appels"/>
                                <field name="total_time_hours" string="Durée effective formation"/>
                            </group>
                            <group name="other">
                                <field name="nombre_de_passage"/>
                                <field name="company_id"/>
                                <field name="mode_de_financement"/>
                                <field name="temps_minute"/>
                                <field name="sorti_formation" attrs="{'invisible': [('company_id', '!=', 2)]}"/>
                                <field name="code_evalbox" attrs="{'invisible': [('company_id', '!=', 2)]}"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- Tree View -->
        <record id="collecte_info_tree_view" model="ir.ui.view">
            <field name="name">info.examen.tree</field>
            <field name="model">info.examen</field>
            <field name="arch" type="xml">
                <tree string="Notes des examens Tree" default_order="create_date desc">
                    <field name="partner_id"/>
                    <field name="code_evalbox" attrs="{'invisible': [('company_id', '!=', 2)]}" optional="hide"/>
                    <field name="mobile" widget="phone" options="{'enable_sms': True}" optional="hide"/>
                    <field name="mode_de_financement" optional="show"/>
                    <field name="session_id"/>
                    <field name="date_exam"/>
                    <field name="epreuve_theorique" attrs="{'invisible': [('company_id', '=', 2)]}" optional="hide"/>
                    <field name="epreuve_pratique" attrs="{'invisible': [('company_id', '=', 2)]}" optional="hide"/>
                    <field name="state_theorique" attrs="{'invisible': [('company_id', '=', 2)]}" optional="hide"/>
                    <field name="state_pratique" attrs="{'invisible': [('company_id', '=', 2)]}" optional="hide"/>
                    <field name="module_id" optional="hide"/>
                    <field name="epreuve_a" avg="Moy.QCM" attrs="{'invisible': [('company_id', '=', 1)]}"
                           optional="hide"/>
                    <field name="epreuve_b" avg="Moy.QRO" attrs="{'invisible': [('company_id', '=', 1)]}"
                           optional="hide"/>
                    <field name="moyenne_generale" avg="Moy.G" attrs="{'invisible': [('company_id', '=', 1)]}"
                           optional="hide"/>
                    <field name="mention" attrs="{'invisible': [('company_id', '!=', 2)]}" optional="hide"/>
                    <field name="is_recu" invisible="1"/>
                    <field name="is_ajourne" invisible="1"/>
                    <field name="is_present" invisible="1"/>
                    <field name="is_Absent" invisible="1"/>
                    <field name="is_absence_justifiee" invisible="1"/>
                    <field name="resultat" options='{"fg_color": "green:is_recu==True; red:is_ajourne==True"}'
                           attrs="{'invisible': [('company_id', '!=', 2)]}" optional="hide"/>
                    <field name="presence"
                           options='{"fg_color": "green:is_present==True; red:is_Absent==True; #ff6600:is_absence_justifiee==True"}'
                           attrs="{'invisible': [('company_id', '!=', 2)]}" optional="hide"
                           string="Présence DIGIMOOV"/>
                    <field name="presence_mcm" attrs="{'invisible': [('company_id', '=', 2)]}" optional="hide"
                           string="Présence MCM"/>
                    <field name="nombre_de_passage"/>
                    <field name="sorti_formation" optional="hide"
                           attrs="{'invisible': [('company_id', '!=', 2)]}"/>
                    <field name="company_id" optional="hide"/>
                    <field name="temps_minute" string="Temps passé plateforme" optional="hide" attrs="{'invisible': [('company_id', '!=', 2)]}"/>
                    <field name="total_time_visio_hour" string="Temps passé Visio" optional="hide" attrs="{'invisible': [('company_id', '!=', 2)]}"/>
                    <field name="total_time_appels_hour" string="Temps passé appels" optional="hide" attrs="{'invisible': [('company_id', '!=', 2)]}"/>
                    <field name="total_time_hours" string="Durée effective formation" optional="hide" attrs="{'invisible': [('company_id', '!=', 2)]}"/>
                </tree>
            </field>
        </record>
        <!-- Searsh View -->
        <record id="info_examen_view_search" model="ir.ui.view">
            <field name="name">info.examen.search</field>
            <field name="model">info.examen</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="partner_id"/>
                    <field name="session_id"/>
                    <field name="date_exam"/>
                    <field name="company_id"/>
                    <field name="mention" attrs="{'invisible': [('company_id', '=', 2)]}"/>
                    <field name="resultat" attrs="{'invisible': [('company_id', '=', 2)]}"/>
                    <field name="epreuve_theorique"/>
                    <field name="epreuve_pratique"/>
                    <field name="state_theorique"/>
                    <field name="state_pratique"/>
                    <separator/>
                    <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="1" string="Group By">
                        <filter string="Résultat" name="resultat" context="{'group_by':'resultat'}"/>
                        <filter string="Présence" name="presence" context="{'group_by':'presence'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!--Menu in session interface-->
        <menuitem id="info_examen_info" name="Notes des examens"
                  parent="mcm_session.mcm_academy_session_root_menu" action="action_info_examen" sequence="12"
                  groups="mcm_session.group_session_module_manager"/>
    </data>
</odoo>