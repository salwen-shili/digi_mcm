<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View from res.partner-->
    <record id="mcmacademy_partner_department__view_res_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="mcm_session.mcmacademy_view_res_partner_form_3"/>
        <field name="arch" type="xml">
            <xpath expr="//group//div[@class='row form-panel']//div[1]//div[3]//div[5]" position="after">
                <div class="col-sm-12">
                    <div>
                        <label for="num_departement" string="N° du département en France :"/>
                        <field name="num_departement"/>
                    </div>
                    <div>
                        <label for="other_cases" string="Nom de l’Etat pour les autres cas :"/>
                        <field name="other_cases"/>
                    </div>
                    <div attrs="{'invisible': [('company_id', '=', 2)]}">
                        <label for="note_exam" string="Note d'examen blanc :">Note d'examen blanc</label>
                        <field name="note_exam"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//page[last()]" position="after">
                <page name="note_exam" string="Examen" >
                    <field name="note_exam_id" attrs="{'invisible': [('company_id', '=', 1)]}" context="{'default_partner_id': id}">
                        <tree>
                            <field name="partner_id"/>
                            <field name="mode_de_financement"/>
                            <field name="session_id"/>
                            <field name="module_id"/>
                            <field name="date_exam"/>
                            <field name="epreuve_a"/>
                            <field name="epreuve_b"/>
                            <field name="resultat"/>
                            <field name="presence"/>
                            <field name="company_id"/>
                            <field name="nombre_de_passage"/>
                        </tree>
                    </field>
                    <field name="note_exam_mcm_id" attrs="{'invisible': [('company_id', '=', 2)]}" context="{'default_partner_id': id}">
                        <tree>
                            <field name="partner_id" />
                            <field name="mode_de_financement"/>
                            <field name="session_id"/>
                            <field name="date_exam"/>
                            <field name="epreuve_theorique"/>
                            <field name="state_theorique"/>
                            <field name="epreuve_pratique"/>
                            <field name="state_pratique"/>
                            <field name="presence_mcm"/>
                            <field name="company_id"/>
                            <field name="nombre_de_passage" optional="hide"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            <div name="button_box" position="inside">
                <button class="oe_stat_button" context="{'search_default_partner_id': active_id}" type="object"
                        name="get_notes_history"
                        icon="fa-book">
                    <field string="Notes" name="note_exam_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
    <!-- Inherit Tree View from res.partner and add field date_creation of plateforme_pedagogique module-->
    <record model="ir.ui.view" id="base_view_partner_tree_inherit">
        <field name="name">res.partner.tree.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='email']" position="after">
                <field name="age" optional="hide"/>
                <field name="num_departement" optional="hide"/>
                <field name="date_creation" string="Inscription sur 360" optional="hide"/>
            </xpath>
        </field>
    </record>
    <!--Inherit partner module to add new boolean field to control the auto creation of new line in session historic smart button-->
    <record model="ir.ui.view" id="inherit_partner_for_report_form_view">
        <field name="name">Client Add report boolean field</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="mcm_session.mcmacademy_view_res_partner_form_3"></field>
        <field name="arch" type="xml">
            <field name="birth_state" position="after">
                <label for="nom_marital" string="Nom marital :"/>
                <field name="nom_marital"/>
            </field>
            <xpath expr="//page/group[@name='session']/group" position="after">
                <group name="report" class="oe_edit_only">
                    <field name="report" string="Changement information session"/>
                    <field name="justification" string="Absence justifié"
                           attrs="{'invisible': ['|',('report', '=', False), ('paiement', '=', True)]}"/>
                    <field name="paiement" string="Changement de ville"
                           attrs="{'invisible': ['|',('justification', '=', True), ('report', '=', False)]}"/>
                    <field name="attachment_ids" widget="many2many_binary" string="Attach a file" nolabel="1"
                           colspan="2" attrs="{'invisible': [('justification', '=', False)]}"/>
                    <field name="autre_raison" string="Notes"
                           attrs="{'invisible': ['|','|',('report', '=', False),('justification', '=', True), ('paiement', '=', True)]}"/>
                </group>
            </xpath>
            <xpath expr="//page/group[@name='session']/group/field[@name='mcm_session_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('report', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>

    <record model='ir.ui.view' id='view_res_partner_filter'>
        <field name='name'>res..partner.filter</field>
        <field name='model'>res.partner</field>
        <field name='inherit_id' ref='base.view_res_partner_filter'/>
        <field name='arch' type='xml'>
            <filter name="type_person" position="before">
                <filter name="age" string="Age 25 ans" domain="[('age', '=', '25')]"/>
            </filter>
        </field>
    </record>
</odoo>