<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View from res.partner-->
    <record id="mcmacademy_partner_department__view_res_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="mcm_session.mcmacademy_view_res_partner_form_3"/>
        <field name="arch" type="xml">
            <xpath expr="//group//div[@class='row form-panel']//div[1]//div[3]//div[5]" position="after">
                <div class="col-sm-12">
                    <div attrs="{'invisible': [('company_id', '=', 2)]}">
                        <label for="note_exam" string="Note d'examen blanc :">Note d'examen blanc</label>
                        <field name="note_exam"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//page[last()]" position="after">
                <page name="note_exam" string="Examen">
                    <field name="note_exam_id"/>
                </page>
            </xpath>

            <div name="button_box" position="inside">
                <button class="oe_stat_button" context="{'search_default_partner_id': active_id}" type="object"
                        name="get_notes_history"
                        icon="fa-book">
                    <field string="Notes" name="note_exam_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
    <!-- Inherit Tree View from res.partner and add field date_creation of plateforme_pedagogique module-->
    <record model="ir.ui.view" id="base_view_partner_tree_inherit">
        <field name="name">res.partner.tree.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='email']" position="after">
                <field name="date_creation" string="Inscription sur 360" optional="hide"/>
            </xpath>
        </field>
    </record>
    <!--Inherit partner module to add new boolean field to control the auto creation of new line in session historic smart button-->
    <record model="ir.ui.view" id="inherit_partner_for_report_form_view">
        <field name="name">Client Add report boolean field</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//page/group[@name='session']/group" position="after">
                <group name="report" class="oe_edit_only">
                    <field name="report" string="Report date d'examen"/>
                </group>
            </xpath>
            <xpath expr="//page/group[@name='session']/group/field[@name='mcm_session_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('report', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>