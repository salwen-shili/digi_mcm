<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="pdf_connection_statement_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <style>
                        .page {
                        line-height: 1.75 ;
                        font-size:20px ;

                        }
                    </style>
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="row">
                            <div class="col-4">
                                <img src='/partner_exam/static/src/img/logo_digimoov.png'
                                     style="max-height: 190px;float:right;padding-right:30px;"/>
                            </div>
                            <div class="col-4"></div>
                            <div class="col-4">
                                <p style="float:left;">
                                    <b>DIGIMOOV</b>
                                    <br/>
                                    10 rue de PENTHIEVRE
                                    <br/>
                                    75008 PARIS
                                    <br/>
                                    Email: hello@digimoov.fr
                                    <br/>
                                    Tel: 09 86 87 88 66
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <br/>
                                <center>
                                    <b>Relevé de connexion</b>
                                </center>
                            </div>
                        </div>
                        <br/>
                        <br/>
                        <div class="col-12">

                            <p>Je, soussigné : <b>NASSERDDINE CHERIH</b>, représentant de l'organisme de formation <b>
                                DIGIMOOV</b>,
                            </p>
                            <br/>
                            atteste que:
                            <strong>
                                <span t-field="o.name"/>
                            </strong>
                            <br/>
                            a suivi la formation:
                            <br/>
                            <hr/>
                            <center>
                                <strong>
                                    <span t-field="o.mcm_session_id.diplome_vise"/>
                                </strong>
                            </center>
                            <hr/>
                            <br/>
                            Lieu de la formation :
                            <b>A distance</b>
                            <br/>
                            Dates de la formation : du
                            <t t-set="sales"
                               t-value="o.sale_order_ids.filtered(lambda tx: tx.state == 'sale')"/>
                            <t t-set="financement_mode"
                               t-value="o.mode_de_financement == 'particulier'"/>
                            <t t-if="sales and financement_mode">
                                <span t-esc="(sales[0].signed_on).strftime('%d/%m/%Y')"/>
                            </t>
                            <t t-else="not sales">
                                <span t-esc="o.date_creation"/>
                            </t>
                            au
                            <span t-field="o.module_id.date_exam"
                                  t-field-options='{"format": "dd/MM/yyyy"}'/>
                            <br/>
                            Durée effective de la formation : &nbsp;&nbsp;min, dont :
                            <br/>
                            - &nbsp;&nbsp;min d’appels
                            <br/>
                            - &nbsp;&nbsp;min de visioconférences
                            <br/>
                            - &nbsp;&nbsp;min de temps passé sur la plateforme
                            <br/>
                        </div>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        Fait à
                        <strong>
                            <span t-raw="'%s' % o.city if o.city else '..............'"/>
                        </strong>
                        , le
                        <!-- date système-->
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/>
                        <br/>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>