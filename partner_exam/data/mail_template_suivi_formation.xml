<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <!--Email template -->
        <record id="email_template_suivi_formation" model="mail.template">
            <field name="name">Attestation de suivi de formation</field>
            <field name="model_id" ref="partner_exam.model_res_partner"/>
            <field name="email_from">tmejri@digimoov.fr</field>
            <field name="email_to"></field>
            <field name="subject">Attestation de suivi de formation </field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Bonjour ${object.display_name}
                        <br/>
                        Do not hesitate to contact us if you have any questions.
                    </p>
                </div>
            </field>
            <field name="reply_to">formation@digimoov.fr</field>
            <field name="use_default_to">True</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete">False</field>
            <field name="report_template" ref="id_attestation"/>
            <field name="report_name">${object.display_name}</field>
        </record>
    </data>
</odoo>
