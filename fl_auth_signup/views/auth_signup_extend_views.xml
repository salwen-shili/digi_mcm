<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="auth_signup_fields_extend" inherit_id="auth_signup.fields" name="Signup Fields Extend">
            <xpath expr="//div[@class='form-group field-name']" position="replace">
                <div class="form-group field-name">
                </div>
            </xpath>
            <xpath expr="//div[3]" position="replace">
                <div class="form-group field-password">
                </div>
            </xpath>
            <xpath expr="//div[4]" position="replace">
                <div class="form-group field-confirm_password">
                </div>
            </xpath>
            <xpath expr="//div[hasclass('field-login')]" position="replace">
                <link href="/mcm_website_theme/static/src/css/register_form.css" rel="stylesheet"/>
                <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons"/>
                <link href="/mcm_website_theme/static/src/css/material_form.css" rel="stylesheet"/>
                <style>
                    .oe_reset_password_form {
                    max-width: 100% !important;
                    }
                </style>

                <!-- <div class="form-group field-phone">
                            <label for="phone" class="control-label">Téléphone</label>
                            <input type="tel" name="phone" t-att-value="phone" id="phone" class="form-control" required="required"/>
                        </div> -->
                <div class="container-fluid">
                    <div class="row justify-content-center paper">
                        <div class="
                col-11 col-sm-10 col-md-10 col-lg-6 col-xl-8
                text-center
                p-0
                mt-3
                mb-2
              ">
                            <div class="form-section">
                                <div class="card px-0 pt-4 pb-0 mt-3 mb-3 bg-c">
                                    <h2 id="heading" t-if="not name">Inscription</h2>
                                    <p class="p_class" t-if="not name">Remplissez tous les champs du formulaire pour
                                        passer à l'étape suivante
                                    </p>

                                    <!-- progressbar -->
                                    <ul id="progressbar" t-if="not name">
                                        <li class="active" id="account">
                                            <strong>Coordonnées</strong>
                                        </li>
                                        <li id="personal">
                                            <strong>Documents</strong>
                                        </li>
                                        <li id="payment">
                                            <strong>Financement</strong>
                                        </li>
                                        <li id="confirm">
                                            <strong>Validation</strong>
                                        </li>
                                    </ul>
                                    <div class="progress" t-if="not name">
                                        <div class="
                      progress-bar progress-bar-striped progress-bar-animated
                    " role="progressbar" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <br t-if="not name"/>

                                    <fieldset>
                                        <div class="row" t-if="not login">
                                            <div class="col-7">
                                                <h2 class="fs-title">Informations personnelles:</h2>
                                            </div>
                                        </div>

                                        <!-- error-input-field -->
                                        <div class="outlined-input-field bg-c" id="lastname_container" t-if="not name">


                                            <input type="text" name="lastName" id="lastname" class="outlined-text-field" autocomplete="off" t-att-value="lastName" pattern="[A-Z,a-z,À-ÿ '-]{2,}" required="required" inputmode="latin-name"/>
                                            <label for="lastname" style="font-size: 1rem; top: 1rem; padding: 0px;">Nom
                                                *
                                            </label>
                                            <i class="material-icons error-icon">error_outline</i>
                                            <div class="helper-text bg-c" id="lastname_helper">
                                                <span></span>
                                            </div>

                                        </div>
                                        <br t-if="not name"/>

                                        <div class="outlined-input-field bg-c" id="firstname_container" t-if=" not name">
                                            <input type="text" id="firstname" name="firstname" class="outlined-text-field" autocomplete="off" t-att-value="firstname" pattern="[A-Z,a-z,À-ÿ '-]{2,}" required="required" inputmode="latin-name"/>
                                            <label for="firstname">Prénom *</label>
                                            <i class="material-icons error-icon">error_outline</i>
                                            <div class="helper-text bg-c" id="firstname_helper">
                                                <span></span>
                                            </div>
                                        </div>
                                        <br t-if="not name"/>

                                        <div class="outlined-input-field bg-c" id="phone_container" t-if="not phone">
                                            <input type="text" id="phone" name="phone" class="outlined-text-field" autocomplete="off" t-att-value="phone" maxlength="10" pattern="(07|06)[0-9]\d{7}" required="required" inputmode="numeric"/>
                                            <label for="phone">Téléphone *</label>
                                            <i class="material-icons error-icon">error_outline</i>
                                            <div class="helper-text bg-c" id="phone_helper">
                                                <span></span>
                                            </div>
                                        </div>
                                        <br t-if="not name"/>

                                        <div class="outlined-input-field bg-c" id="email_container" t-if="not name">
                                            <input type="text" id="email" class="outlined-text-field" autocomplete="off" value="" required="required" inputmode="email" name="login"/>
                                            <label for="email">Email *</label>
                                            <i class="material-icons error-icon">error_outline</i>
                                            <div class="helper-text bg-c" id="email_helper">
                                                <span></span>
                                            </div>
                                        </div>
                                        <div class="outlined-input-field bg-c" id="email_container" t-if="name">
                                            <input type="text" id="email" class="outlined-text-field" autocomplete="off" t-att-value="login" required="required" inputmode="email" name="login" t-att-readonly="'readonly' if login else None"/>
                                            <label for="email" style="top: -0.7rem;padding: 0.25rem;">Email *</label>
                                            <i class="material-icons error-icon">error_outline</i>
                                            <div class="helper-text bg-c" id="email_helper">
                                                <span></span>
                                            </div>
                                        </div>

                                        <br/>

                                        <div class="outlined-input-field bg-c" id="confirm_email_container" t-if="not name">
                                            <input type="text" id="confirm_email" class="outlined-text-field" name="confirm_email" autocomplete="off" value="" required="required" inputmode="email"/>
                                            <label for="confirm_email">Confirmer votre email *</label>
                                            <i class="material-icons error-icon">error_outline</i>
                                            <div class="helper-text bg-c" id="confirm_email_helper">
                                                <span></span>
                                            </div>
                                        </div>
                                        <div class="outlined-input-field bg-c" id="confirm_email_container" t-if="name" style="display:none">
                                            <input type="text" id="confirm_email" class="outlined-text-field" name="confirm_email" autocomplete="off" t-att-value="login" required="required" inputmode="email"/>
                                            <label for="confirm_email">Confirmer votre email *</label>
                                            <i class="material-icons error-icon">error_outline</i>
                                            <div class="helper-text bg-c" id="confirm_email_helper">
                                                <span></span>
                                            </div>
                                        </div>
                                        <br t-if="not name"/>

                                        <div class="outlined-input-field bg-c" id="password_container">
                                            <input type="password" id="password" class="outlined-text-field" autocomplete="off" required="required" name="password"/>
                                            <label for="password">Mot de passe *</label>
                                            <i class="material-icons error-icon">error_outline</i>
                                            <div class="helper-text bg-c" id="password_helper">
                                                <span></span>
                                            </div>
                                        </div>

                                        <br t-if="not name"/>
                                        <br t-if="name"/>
                                        <button type="submit" class="rkmd-btn btn-black ripple-effect ripple-yellow" t-if="name">
                                            Confirmer
                                        </button>
                                        <br t-if="name"/>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <script t-if="name">
                    $(`#email`).animate(
                    {
                    fontSize: "0.8rem",
                    top: "-0.7rem",
                    padding: "0.25rem",
                    },
                    80
                    );

                </script>
                <!-- Address Form -->

                <div class="container-fluid" t-if="not street">
                    <div class="row justify-content-center paper">
                        <div class="
                col-11 col-sm-10 col-md-10 col-lg-6 col-xl-8
                text-center
                p-0
                mt-3
                mb-2
              ">
                            <div class="form-section">
                                <div class="card px-0 pt-4 pb-0 mt-3 mb-3 bg-c">
                                    <!-- fieldsets -->
                                    <fieldset>
                                        <div class="row">
                                            <div class="col-7">
                                                <h2 class="fs-title">Votre adresse</h2>
                                            </div>
                                        </div>
                                        <!-- error-input-field -->
                                        <div class="row">
                                            <div class="col-md-4 mgb outlined-input-field bg-c" id="zipcode_container">
                                                <input type="text" id="zipcode" name="zip" class="outlined-text-field" required="required" maxlength="5" pattern="[0-9]{5,5}" inputmode="numeric" autocomplete="off" value=""/>
                                                <label for="zipcode" style="left: 2rem !important">Code Postal *
                                                </label
                                                >
                                                <i class="material-icons error-icon">error_outline</i>
                                                <div class="helper-text bg-c" id="zipcode_helper">
                                                    <span></span>
                                                </div>
                                            </div>
                                            <div class="col-md-8 outlined-input-field bg-c" id="city_container" aria-disabled="true">
                                                <!-- <input type="text" id="city" class="outlined-text-field" autocomplete="off" /> -->
                                                <select class="outlined-text-field disabled" name="city" id="city" type="hidden" required="required"></select>
                                                <label for="city" style="left: 2rem !important">Ville *
                                                </label
                                                >
                                                <i class="material-icons error-icon">error_outline</i>
                                                <div class="helper-text bg-c" id="city_helper">
                                                    <span></span>
                                                </div>
                                            </div>
                                        </div>
                                        <br/>

                                        <div class="outlined-input-field bg-c" id="voie_container" aria-disabled="true">
                                            <select class="outlined-text-field" name="voie" id="voie" disabled="true" required="required">
                                                <option value=""></option>
                                                <option value='AUTRE'>(AUTRE...)</option>
                                                <option value='ALLÉE'>ALLÉE</option>
                                                <option value='AVENUE'>AVENUE</option>
                                                <option value='BOULEVARD'>BOULEVARD</option>
                                                <option value='COUR'>COUR</option>
                                                <option value='GALERIE'>GALERIE</option>
                                                <option value='IMPASSE'>IMPASSE</option>
                                                <option value='JARDIN'>JARDIN</option>
                                                <option value='METRO'>METRO</option>
                                                <option value='MUSEE'>MUSEE</option>
                                                <option value='PALAIS'>PALAIS</option>
                                                <option value='PARKING'>PARKING</option>
                                                <option value='PASSAGE'>PASSAGE</option>
                                                <option value='PATIO'>PATIO</option>
                                                <option value='PERISTYLE'>PERISTYLE</option>
                                                <option value='PLACE'>PLACE</option>
                                                <option value='PORT'>PORT</option>
                                                <option value='PORTE'>PORTE</option>
                                                <option value='QUAI'>QUAI</option>
                                                <option value='RUE'>RUE</option>
                                                <option value='SQUARE'>SQUARE</option>
                                                <option value='TERRASSE'>TERRASSE</option>
                                                <option value='VILLAGE'>VILLAGE</option>
                                            </select>
                                            <label for="voie">Type de voie *</label>
                                            <i class="material-icons error-icon"></i>
                                            <div class="helper-text bg-c" id="voie_helper">
                                                <span></span>
                                            </div>
                                        </div>

                                        <br/>

                                        <div class="outlined-input-field bg-c" id="nom_voie_container" aria-disabled="true">

                                            <input type="text" name="nom_voie" id="nom_voie" class="outlined-text-field" autocomplete="off" required="required"/>

                                            <label for="nom_voie">Nom de voie *</label>
                                            <i class="material-icons error-icon">error_outline</i>
                                            <div class="helper-text bg-c" id="nom_voie_helper">
                                                <span></span>
                                            </div>
                                        </div>
                                        <br/>

                                        <div class="outlined-input-field bg-c" id="num_voie_container">
                                            <input type="text" id="num_voie" name="num_voie" class="outlined-text-field" required="required" maxlength="6" pattern="[0-9]{5,5}" inputmode="numeric" autocomplete="off"/>
                                            <label for="num_voie">N° de voie *</label>
                                            <i class="material-icons error-icon">error_outline</i>
                                            <div class="helper-text bg-c" id="num_voie_helper">
                                                <span></span>
                                            </div>
                                        </div>
                                        <br/>

                                        <div class="outlined-input-field bg-c" id="comp_address_container">
                                            <input type="text" id="comp_address" name="street2" class="outlined-text-field" autocomplete="off"/>
                                            <label for="comp_address">Complément d'adresse</label>
                                            <i class="material-icons error-icon">error_outline</i>
                                            <div class="helper-text bg-c" id="comp_address_helper">
                                                <span></span>
                                            </div>
                                        </div>
                                        <br/>

                                        <!-- <div style="float: left">
                                          <label class="pure-material-checkbox">
                                            <input type="checkbox" id="introuvable" />
                                            <label for="introuvable" style="font-weight: 600">Mon adresse ne figure pas dans la liste</label
                                            >
                                          </label>
                                        </div> -->

                                        <!-- <input type="submit" value="Suivant" style=""/> -->

                                        <!-- <div class="mt-3" style="float: right">
                                          <button class="rkmd-btn btn-white ripple-effect ripple-yellow" id="button-submit" type="submit">
                                            Suivant<i class="fa fa-chevron-right"></i>
                                          </button>
                                        </div> -->
                                        <div class="text-center oe_login_buttons pt-5" style="margin-block-end: 3rem">
                                            <a href="/web/login?" class="rkmd-btn btn-white ripple-effect ripple-yellow" style="margin-right: 10px; display:none">

                                                se connecter
                                            </a>
                                            <button id="inscrire" type="submit" class="rkmd-btn btn-black ripple-effect ripple-yellow" data-oe-model="ir.ui.view" data-oe-id="1730" data-oe-field="arch" data-oe-xpath="/data/xpath[4]/div[2]/div[1]/div[1]/div[1]/div[1]/fieldset[1]/div[7]/button[1]">
                                                S'incrire
                                                <i class="material-icons right">send</i>
                                            </button>

                                            <div class="o_login_auth" data-oe-model="ir.ui.view" data-oe-id="1730" data-oe-field="arch" data-oe-xpath="/data/xpath[4]/div[2]/div[1]/div[1]/div[1]/div[1]/fieldset[1]/div[7]/div[1]"></div>
                                        </div>
                                        <link href="/mcm_contact_documents/static/src/css/button.css" rel="stylesheet"/>


                                    </fieldset>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <script defer="defer" type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"/>


                <!-- <script defer="defer" type="text/javascript" src="/mcm_website_theme/static/src/js/register_form.js" /> -->

                <script defer="defer" type="text/javascript" src="/fl_auth_signup/static/js/validate_inscription.js" t-if="not name"/>
                <script defer="defer" type="text/javascript" src="/mcm_website_theme/static/src/js/material.js"/>

            </xpath>

        </template>
        <template id="fl_auth_signup.login" inherit_id="auth_signup.login" name="Sign up - Reset Password">
            <xpath expr="//div[@class='justify-content-between mt-2 d-flex small']" position="replace">
                <div class="justify-content-between mt-2 d-flex small">
                    <a t-if="signup_enabled" t-attf-href="/web/signup?{{ keep_query() }}" style="font-size: large">Vous
                        n'avez pas de compte ?
                    </a>
                    <div>
                        <a t-if="reset_password_enabled" t-attf-href="/web/reset_password?{{ keep_query() }}" style="font-size: large">Mot de passe oublié ?
                        </a>
                    </div>

                </div>
            </xpath>
        </template>
        <template id="fl_auth_signup.reset_password" inherit_id="auth_signup.reset_password" name="Reset password">
            <xpath expr="//div[1]//a" position="replace">
                <a href="/web/login" class="btn btn-link float-right" role="button" style="font-size: large">Connexion
                </a>
            </xpath>
            <xpath expr="//div[@class='clearfix oe_login_buttons']//div" position="replace">
                <div class="d-flex justify-content-between align-items-center small mt-2">
                    <button type="submit" class="rkmd-btn btn-black ripple-effect ripple-yellow" t-if="not login">
                        Confirmer
                    </button>

                    <a t-if="not token" t-attf-href="/web/login?{{ keep_query() }}" style="font-size: large">Connexion
                    </a
                    >
                    <a t-if="invalid_token" href="/web/login" style="font-size: large">Connexion
                    </a
                    >
                </div>


            </xpath>
        </template>
        <template id="fl_auth_signup.form_extented" inherit_id="auth_signup.signup" name="Extended Form Sign up">
            <xpath expr="//form" position="replace">

                <form id="first_form" role="form" method="post" t-if="not message">
                    <input name="csrf_token" t-att-value="request.csrf_token()" type="hidden"/>

                    <t t-call="auth_signup.fields">
                        <t t-set="only_passwords" t-value="bool(token and not invalid_token)"/>
                    </t>

                    <p class="alert alert-danger" t-if="error" role="alert">
                        <t t-esc="error"/>
                    </p>
                    <!--          <input type="hidden" name="redirect" t-att-value="'/charger_mes_documents'"/>-->
                    <input name="token" t-att-value="token" type="hidden"/>
                    <input id="product_id" t-att-value="product_id" type="hidden"/>

                </form>


            </xpath>

        </template>
    </data>
</odoo>