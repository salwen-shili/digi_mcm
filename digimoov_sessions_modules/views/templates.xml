        <!--&lt;!&ndash;                <li class="breadcrumb-item">&ndash;&gt;-->
        <!--&lt;!&ndash;                    <a t-att-href="keep(category=0)">Produits</a>&ndash;&gt;-->
        <!--&lt;!&ndash;                </li>&ndash;&gt;-->
