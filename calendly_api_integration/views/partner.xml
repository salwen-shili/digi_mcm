<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mcm_calendly_view_res_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="before">
                <group attrs="{'invisible': ['|',('company_id', '=', 2),('est_coach','=',True)]}">
                    <group string="PrÃ©-requis" name="calendly"
                           attrs="{'invisible': ['|',('company_id', '=', 2),('est_coach','=',True)]}">
                        <field name="driver_licence"/>
                        <field name="license_suspension"/>
                        <field name="criminal_record"/>
                        <field name="statut_calendly"/>
                        <progressbar field="statut_calendly"
                                     colors='{"valid": "success", "waiting": "danger"}'/>

                    </group>
                </group>

            </xpath>
        </field>
    </record>
    <record id="res_partner_view_button_rendezvous" model="ir.ui.view">
        <field name="name">res.partner.view.buttons.rendezvous</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="action" name="%(calendly_api_integration.rendezvous_action)d"

                        icon="fa-phone">
                    <field string="Rendez-vous" name="rendezvous_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
</odoo>