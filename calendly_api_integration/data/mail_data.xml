<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="0">

        <record id="calendly_event" model="mail.template">
            <field name="name">Contact : MCM-Cours en direct</field>
            <field name="model_id" ref="model_calendly_rendezvous"/>
            <field name="subject">Cours en direct
            </field>
            <field name="email_from">${object.partner_id.company_id.email}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="body_html" type="html">
                <div>

                    <center>
                        <img src="https://mcm-academy.odoo.com/web/image/website/1/logo/MCM%20ACADEMY?unique=bb4cb5b"
                             width="10%"></img>
                        <br/>
                        <br/>
                        <br/>

                        <p style="border:1px;color: rgb(0, 0, 0)">Bonjour ${object.partner_id.name},</p>
                        <span align="center" style="border:1px;color: rgb(0, 0, 0)">

                            ${object.name}, avec MCM Academy à
                            ${object.event_starttime_char}.

                            <br/>

                            <br/>
                            <center>
                                <a class="v1action"
                                   href="https://us02web.zoom.us/j/3872196838"

                                   style="font-family:&quot;Proxima Nova&quot;, &quot;proxima-nova&quot;, Helvetica, Arial sans-serif; color: rgb(0, 105, 255); display: inline-block; min-width: 140px; margin: 10px 5px 0 5px; padding: 8px; text-align: center; text-decoration: none; background-color: rgb(0, 0, 0)
                                    ; border: 1px solid #d0d0d0; color: rgb(255, 255, 255);font-weight: bold;"
                                   target="_blank" rel="noreferrer">
                                    Accéder au cours
                                </a>

                            </center>
                            <br/>
                        </span>
                        <br/>
                        <br/>
                    </center>
                </div>
            </field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="False"/>
        </record>
        <record id="sms_template_calendly" model="sms.template">
            <field name="name">Customer: automated SMS</field>
            <field name="model_id" ref="model_calendly_rendezvous"/>
            <field name="body">${object.name} avec MCM Academy à
                ${object.event_starttime_char} cliquez => https://urlz.fr/jlbY.
            </field>
        </record>





         <record id="digi_calendly_event" model="mail.template">
            <field name="name">Contact : Digimoov-Cours en direct</field>
            <field name="model_id" ref="model_calendly_rendezvous"/>
