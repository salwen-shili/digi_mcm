<odoo>

    <record id="calendlu_sms_send" model="base.automation">
        <field name="name">Base Automation: envoit invitation calaendly (SMS)</field>
        <field name="model_id" ref="model_calendly_rendezvous"/>
        <field name="trigger">on_create_or_write</field>
        <field name="trigger_field_ids" eval="[(4,ref('calendly_rendezvous.field__event_starttime_char'))]"/>
        <field name="active" eval="True"/>
        <field name="state">sms</field>
        <field name="filter_domain">[('partner_id.company_id', '=', 1)]</field>
        <field name="filter_pre_domain">[('partner_id.company_id', '=', 1)]</field>

    </record>
