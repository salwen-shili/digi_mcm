<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="mcm_email_template_edi_sale" model="mail.template">
            <field name="name">MCM Contrat: Send by email</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="subject">${object.company_id.name}
                ${object.state in ('draft', 'sent') and 'Contrat-' or 'Contrat-'} ${object.partner_id.name or 'n/a' })
            </field>
            <field name="email_from">${(object.user_id.email_formatted or user.email_formatted) | safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="body_html" type="html">
                <div style="margin:0px;padding: 0px;">
                    <p style="padding: 0px; font-size: 13px;">
                        % set doc_name = 'Contrat' if object.state in ('draft', 'sent') else 'Contrat'
                        Bonjour,
                        <br/>
                        <br/>
                        Votre
                        % if ctx.get('proforma'):
                        Facture pro forma pour ${doc_name}
                        <strong>${object.name}</strong>
                        % if object.origin:
                        (en référence: ${object.origin} )
                        % endif
                        d'un montant de <strong>${format_amount(object.amount_total, object.pricelist_id.currency_id)}
                    </strong> est disponible.
                        % else:
                        ${doc_name}
                        <strong>${object.name}</strong>
                        % if object.origin:
                        (with reference: ${object.origin} )
                        % endif
                        d'un montant de <strong>${format_amount(object.amount_total, object.pricelist_id.currency_id)}
                    </strong> est prêt pour signature.
                        % endif
                        <br/>
                        <br/>
                        N'hésitez pas à nous contacter si vous avez des questions.
                        <br/>
                    </p>
                </div>
            </field>
            <!--            <field name="report_template" ref="sale.action_report_saleorder"/>-->
            <!--            <field name="report_name">Contrat- ${(object.partner_id.name)}</field>-->
            <field name="lang">${object.partner_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>
        <record id="mcm_email_template_invoice" model="mail.template">
            <field name="name">MCM Invoice: Send by email</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject"> Facture ${object.name} - MCM ACADEMY</field>
            <field name="email_from">${(object.user_id.email_formatted or user.email_formatted) | safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="body_html" type="html">
                <div style="margin:0px;padding: 0px;">
                    <p style="padding: 0px; font-size: 13px;">
                        % set doc_name = 'Facture'
                        Bonjour ${object.partner_id.name},
                        <br/>
                        <br/>
                        % if object.invoice_payment_state == 'paid':
                        Suite au paiement que vous avez effectué sur notre site <a href="www.mcm-academy.fr">www.mcm-academy.fr</a>  relatif à votre inscription à % if object.module_id: la ${object.module_id.product_id.name} % else : notre formation % endif , veuillez trouver, ci-jointe, votre facture ${object.name}.
                        <br/>
                        <br/>
                        Si vous avez besoin de plus d’informations, n’hésitez pas à <a href="/service-clientele">nous contacter</a>.
                        <br/>
                        <br/>
                        Cordialement.
                        % else :
                        Suite à votre inscription à % if object.module_id: la ${object.module_id.product_id.name} % else : notre formation % endif, veuillez trouver ci-jointe, votre facture référencée sous le numéro <strong> ${object.name} </strong>, et s'élevant à <strong> ${format_amount(object.amount_total, object.currency_id)} </strong>.
                        <br/>
                        <br/>
                        Veuillez procéder au paiement dans les meilleurs délais.
                        <br/>
                        <br/>
                        Si vous avez besoin de plus d’informations, n’hésitez pas à <a href="/service-clientele">nous contacter</a>.
                        <br/>
                        <br/>
                        Cordialement.
                        % endif
                    </p>
                </div>
            </field>
            <field name="report_template" ref="account.account_invoices"/>
            <field name="report_name">Facture_${(object.name or '').replace('/','_')}${object.state == 'draft' and '_draft' or ''}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>
