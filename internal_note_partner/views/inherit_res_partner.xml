<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Inherit Form View from res.partner to add a smart button
    contains list of comments with type(comments & notification)-->
    <record id="inherit_mcmacademy_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" context="{'search_default_partner_id': active_id}" type="object"
                        name="get_comments_history"
                        string="Liste des commentaires interne"
                        icon="fa-comments-o">
                </button>
            </div>
            <xpath expr="//form//sheet" position="inside">
                <field name="last_internal_log" invisible="1"/>
            </xpath>
            <xpath expr="//form//sheet" position="inside">
                <field name="presence" invisible="1"/>
                <field name="resultat" invisible="1"/>
                <field name="nombre_de_passage" invisible="1"/>
                <field name="date_exam" invisible="1"/>
            </xpath>
        </field>
    </record>
    <!-- Inherit Tree View from res.partner-->
    <record model="ir.ui.view" id="view_partner_tree_inherit">
        <field name="name">res.partner.tree.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-danger">presence == 'Absent(e)'</attribute>
                <attribute name="decoration-success">(presence == 'Présent(e)' and resultat == 'Admis(e)')</attribute>
                <attribute name="decoration-warning">presence == 'Absence justifiee'</attribute>
                <attribute name="decoration-warning">(presence == 'Présent(e)' and resultat == 'Ajourné(e)')</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='module_id']" position="before">
                <field name="mcm_session_id" string="Session" optional="show"/>
                <field name="date_exam" string="Date examen" optional="hide"/>
            </xpath>
            <xpath expr="//tree/field[@name='company_id']" position="replace">
                <field name="company_id" optional="hide"/>
            </xpath>
            <xpath expr="//tree/field[@name='email']" position="after">
                <field name="last_internal_log" widget="html" optional="show"/>
            </xpath>
            <xpath expr="//tree/field[@name='last_internal_log']" position="before">
                <field name="presence" optional="show" />
                <field name="resultat" optional="show"/>
                <field name="nombre_de_passage" optional="show"/>
            </xpath>
            <xpath expr="//tree/field[@name='last_login']" position="replace">
                <field name="last_login" optional="hide"/>
            </xpath>
            <xpath expr="//tree/field[@name='totalTimeSpentInMinutes']" position="replace">
                <field name="totalTimeSpentInMinutes" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>