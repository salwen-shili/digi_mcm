<odoo>
    <data>
        <!-- Action -->
        <record id="action_infos_surveillant" model="ir.actions.act_window">
            <field name="name">Les surveillant(e)s d'examens</field>
            <field name="res_model">infos.surveillant</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first Information</p>
            </field>
        </record>
        <!-- Form View -->
        <record id="infos_surveillant_form" model="ir.ui.view">
            <field name="name">infos.surveillant.form</field>
            <field name="model">infos.surveillant</field>
            <field name="arch" type="xml">
                <form string="Infos Surveillant Form">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <group>
                            <group name="infos_surveillant" string="Fiche surveillant(e)">
                                <div class="oe_title" colspan="6">
                                    <label for="surveillant_id" class="oe_edit_only"/>
                                    <h1>
                                        <field name="surveillant_id" class="oe_inline"
                                               domain="[('est_surveillant', '=', True)]"/>
                                    </h1>
                                </div>
                                <field name="active" invisible="1"/>
                                <field name="phone"/>
                                <field name="email"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- Tree View -->
        <record id="collecte_infos_surveillant_tree_view" model="ir.ui.view">
            <field name="name">infos.surveillant.tree</field>
            <field name="model">infos.surveillant</field>
            <field name="arch" type="xml">
                <tree string="Infos Surveillant(e)s">
                    <field name="surveillant_id"/>
                    <field name="phone"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>
        <!-- Searsh View -->
        <record id="infos_surveillant_view_search" model="ir.ui.view">
            <field name="name">infos.surveillant.search</field>
            <field name="model">infos.surveillant</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="surveillant_id"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <separator/>
                    <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>
        <!--inherit configuration menu and add menu of "Les surveillant(e)s)-->
        <menuitem id="infos_surveillant_id" name="Les surveillant(e)s d'examens"
                  parent="mcm_session.mcm_academy_session_config_main_menu" action="action_infos_surveillant"
                  sequence="16"/>
    </data>
</odoo>